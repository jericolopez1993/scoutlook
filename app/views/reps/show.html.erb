<style>
@media (max-width: 767px) {
  .text-right {
    text-align: left!important;
  }
}
</style>
<!-- begin page-header -->
<%= render 'layouts/static/header', header_title: "#{@rep.first_name} #{@rep.last_name}" %>
<!-- end page-header -->
<!-- begin panel -->
<div class="panel panel-inverse">
  <div class="panel-heading">
    <div class="panel-heading-btn">
      <%= link_to 'Edit', edit_rep_path(@rep), :class => 'btn btn-warning btn-xs' %>
      <%= link_to 'Back', reps_path, :class => 'btn btn-info btn-xs' %>
    </div>
    <h4 class="panel-title"><%= @rep.first_name %>&nbsp;<%= @rep.last_name %></h4>
  </div>
  <div class="panel-body">
    <h4 class="text-inverse">Details</h4>
    <div class="form-group row m-b-15">
      <label class="col-md-2 text-right col-form-label">Name:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @rep.first_name %>&nbsp;<%= @rep.last_name %>
      </div>
    </div>
    <div class="form-group row m-b-15">
      <label class="col-md-2 text-right col-form-label">Location:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @rep.location %>
      </div>
    </div>
    <div class="form-group row m-b-15">
      <label class="col-md-2 text-right col-form-label">Date of Hire:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @rep.date_of_hire %>
      </div>
    </div>
    <div class="form-group row m-b-15">
      <label class="col-md-2 text-right col-form-label">Phone:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @rep.phone %>
      </div>
    </div>
    <div class="form-group row m-b-15">
      <label class="col-md-2 text-right col-form-label">E-mail:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @rep.email %>
      </div>
    </div>
  </div>
</div>
<!-- end panel -->
