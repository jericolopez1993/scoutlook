
<!-- begin page-header -->
<%= render 'layouts/static/header', header_title: 'Reps', sub_header_title: 'Create/Edit/View'%>
<!-- end page-header -->
<!-- begin panel -->
<div class="panel panel-inverse">
  <div class="panel-heading">
    <div class="panel-heading-btn">
    <%= link_to 'New Rep', new_rep_path, :class => 'btn btn-primary btn-xs' %>
    </div>
    <h4 class="panel-title">List of Reps</h4>
  </div>
  <div class="panel-body">
    <table id="data-table-buttons" class="table table-striped table-bordered data-table-buttons">
    								<thead>
    									<tr class="odd gradeX">
    										<th width="1%">#</th>
    										<th class="text-nowrap">Name</th>
    										<th class="text-nowrap">Location</th>
    										<th class="text-nowrap">Hired</th>
    										<th class="text-nowrap">Phone</th>
    										<th class="text-nowrap">E-mail</th>
										    <th class="text-nowrap" data-orderable="false">Actions</th>
    									</tr>
    								</thead>
    								<tbody>
                      <% @reps.each do |rep| %>
                        <tr>
                          <td><%= generate_alphanumeric_id(rep.last_name, rep.id) %></td>
                          <td><%= rep.first_name %> <%= rep.last_name %></td>
                          <td><%= rep.location %></td>
                          <td><%= rep.date_of_hire %></td>
                          <td><%= rep.phone %></td>
                          <td><%= rep.email %></td>
                          <td>
                            <%= link_to '<i class="far fa-eye"></i>'.html_safe, rep, :class => 'btn btn-info' %>
                            <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_rep_path(rep), :class => 'btn btn-warning' %>
                            <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, rep, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger'%>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
  </div>
</div>
<!-- end panel -->
