<!-- begin page-header -->
<%= render 'layouts/static/header', header_title: 'Rates' %>
<!-- end page-header -->
<!-- begin panel -->
<div class="panel panel-inverse">
  <div class="panel-heading">
    <div class="panel-heading-btn">
      <%= link_to 'New Rate', new_carrier_rate_path, :class => 'btn btn-primary btn-xs' %>
    </div>
    <h4 class="panel-title">List of Rates</h4>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-bordered data-table-buttons display nowrap">
			<thead>
				<tr class="odd gradeX">
					<th>Carrier</th>
					<th>Level</th>
					<th>Steward</th>
					<th>Type</th>
					<th>Parent</th>
			    <th data-orderable="false">Actions</th>
				</tr>
			</thead>
			<tbody>
        <% @carrier_rates.each do |carrier_rate| %>
          <tr>
            <td><%= carrier_rate.carrier.nil? ? "" : (link_to carrier_rate.carrier.company_name, carrier_rate.carrier) %></td>
            <td><%= carrier_rate.rate_level %></td>
            <td><%= carrier_rate.rep.nil? ? "" : (link_to "#{carrier_rate.rep.first_name} #{carrier_rate.rep.last_name}", carrier_rate.rep) %></td>
            <td><%= carrier_rate.rate_type %></td>
            <td><%= carrier_rate.parent.nil? ? "" : (link_to carrier_rate.parent.rate_level, carrier_rate.parent) %></td>
            <td>
              <%= link_to '<i class="far fa-eye"></i>'.html_safe, carrier_rate, :class => 'btn btn-info btn-xs' %>
              <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_carrier_rate_path(carrier_rate), :class => 'btn btn-warning btn-xs' %>
              <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, carrier_rate, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-xs'%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<!-- end panel -->
