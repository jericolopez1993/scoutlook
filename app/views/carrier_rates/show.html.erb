<style>
@media (max-width: 767px) {
  label {
    text-align: left!important;
  }
}
label {
  text-align: right;
}
</style>
<!-- begin page-header -->
<%= render 'layouts/static/header', header_title: "#{@carrier_rate.carrier.nil? ? '' : generate_alphanumeric_id(@carrier_rate.carrier.company_name, @carrier_rate.carrier.id)}", sub_header_title: "#{@carrier_rate.carrier.nil? ? '' : link_to(@carrier_rate.carrier.company_name,  @carrier_rate.carrier)}"  %>
<div class="panel panel-inverse">
  <div class="panel-heading">
    <div class="panel-heading-btn">
      <%= link_to 'Edit', edit_carrier_rate_path(@carrier_rate), :class => 'btn btn-warning btn-xs' %>
      <% if @previous_controller == "carriers"%>
        <% carrier = Carrier.find(@carrier_rate.carrier_id)%>
        <%= link_to 'Back ', carrier, :class => 'btn btn-info btn-xs' %>
      <% else %>
        <%= link_to 'Back', carriers_path, :class => 'btn btn-info btn-xs' %>
      <% end %>
    </div>
    <h4 class="panel-title">  <%= generate_alphanumeric_id(@carrier_rate.rate_type, @carrier_rate.id) %> - <%= @carrier_rate.rate_type %></h4>
  </div>
  <div class="panel-body">
    <h4 class="text-inverse">Details</h4>
    <div class="row">
      <label class="col-md-2 col-form-label">Carrier:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @carrier_rate.carrier.nil? ? "" : (link_to @carrier_rate.carrier.company_name, @carrier_rate.carrier) %>
      </div>
    </div>
    <div class="row">
      <label class="col-md-2 col-form-label">Level:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @carrier_rate.rate_level %>
      </div>
    </div>
    <div class="row">
      <label class="col-md-2 col-form-label">Type:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @carrier_rate.rate_type %>
      </div>
    </div>
    <div class="row">
      <label class="col-md-2 col-form-label">Steward:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @carrier_rate.rep.nil? ? "" : (link_to "#{@carrier_rate.rep.first_name} #{@carrier_rate.rep.last_name}", @carrier_rate.rep) %>
      </div>
    </div>
    <div class="row">
      <label class="col-md-2 col-form-label">Parent:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @carrier_rate.parent.nil? ? "" : (link_to "@carrier_rate.parent.rate_level, @carrier_rate.parent") %>
      </div>
    </div>
    <div class="row">
      <label class="col-md-2 col-form-label">Effective To:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @carrier_rate.effective_to %>
      </div>
    </div>
    <div class="row">
      <label class="col-md-2 col-form-label">Effective From:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @carrier_rate.effective_from %>
      </div>
    </div>

    <hr>
    <h4 class="text-inverse">Other Information</h4>
    <div class="row">
      <label class="col-md-2 col-form-label">Freight Description:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @carrier_rate.freight_desc %>
      </div>
    </div>
    <div class="row">
      <label class="col-md-2 col-form-label">Freight Classification:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @carrier_rate.freight_classification %>
      </div>
    </div>
    <div class="row">
      <label class="col-md-2 col-form-label">Transit Time:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @carrier_rate.transit_time %>
      </div>
    </div>
    <div class="row">
      <label class="col-md-2 col-form-label">Minimum Density:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @carrier_rate.minimum_density %>
      </div>
    </div>

    <hr>
    <h4 class="text-inverse">Location</h4>
    <div class="row">
      <label class="col-md-2 col-form-label">Origin:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @carrier_rate.origin_location.nil? ? "" : location_format(@carrier_rate.origin_location) %>
      </div>
    </div>
    <div class="row">
      <label class="col-md-2 col-form-label">Destination:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @carrier_rate.destination_location.nil? ? "" : location_format(@carrier_rate.destination_location) %>
      </div>
    </div>
    </div>
  </div>
