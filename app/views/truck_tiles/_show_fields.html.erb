<div class="row">
  <label class="col-md-3 col-form-label">ID:</label>
  <div class="col-md-9 lbl-padding-t">
    <b><%= truck_tile.uniq_id %></b>
  </div>
</div>
<div class="row">
  <label class="col-md-3 col-form-label">Dispatcher:</label>
  <div class="col-md-9 lbl-padding-t">
    <%= truck_tile.salesperson && truck_tile.salesperson.full_name %>
  </div>
</div>
<div class="row">
  <label class="col-md-3 col-form-label">Carrier:</label>
  <div class="col-md-9 lbl-padding-t">
    <%= truck_tile.carrier && truck_tile.carrier.company_name %>
  </div>
</div>
<div class="row">
  <label class="col-md-3 col-form-label">TTT Rate:</label>
  <div class="col-md-9 lbl-padding-t">
    <%= truck_tile.bill_rate %>
  </div>
</div>
<div class="row">
  <label class="col-md-3 col-form-label">Status:</label>
  <div class="col-md-9 lbl-padding-t">
    <%= truck_tile.status %>
  </div>
</div>
<div class="row">
  <label class="col-md-3 col-form-label">Origin:</label>
  <div class="col-md-9 lbl-padding-t">
    <% truck_tile.origin_to_array.each do |cr| %>
      <% if Carrier::LIGHT_BLUE.include?(cr) %>
        <span class="badge badge-primary"><%= cr %></span>
      <% elsif Carrier::DARK_BLUE.include?(cr) %>
        <span class="badge badge-drakblue"><%= cr %></span>
      <% elsif Carrier::BLUE.include?(cr) %>
        <span class="badge badge-info"><%= cr %></span>
      <% elsif Carrier::RED.include?(cr) %>
      <span class="badge badge-danger"><%= cr %></span>
      <% elsif Carrier::BROWN.include?(cr) %>
        <span class="badge badge-brown"><%= cr %></span>
      <% elsif Carrier::YELLOW.include?(cr) %>
        <span class="badge badge-yellow"><%= cr %></span>
      <% elsif Carrier::ORANGE.include?(cr) %>
        <span class="badge badge-warning"><%= cr %></span>
      <% elsif Carrier::GREEN.include?(cr) %>
        <span class="badge badge-green"><%= cr %></span>
      <% end %>
    <% end %>
  </div>
</div>
<div class="row">
  <label class="col-md-3 col-form-label">Destination:</label>
  <div class="col-md-9 lbl-padding-t">
    <% truck_tile.destination_to_array.each do |cr| %>
      <% if Carrier::LIGHT_BLUE.include?(cr) %>
        <span class="badge badge-primary"><%= cr %></span>
      <% elsif Carrier::DARK_BLUE.include?(cr) %>
        <span class="badge badge-drakblue"><%= cr %></span>
      <% elsif Carrier::BLUE.include?(cr) %>
        <span class="badge badge-info"><%= cr %></span>
      <% elsif Carrier::RED.include?(cr) %>
      <span class="badge badge-danger"><%= cr %></span>
      <% elsif Carrier::BROWN.include?(cr) %>
        <span class="badge badge-brown"><%= cr %></span>
      <% elsif Carrier::YELLOW.include?(cr) %>
        <span class="badge badge-yellow"><%= cr %></span>
      <% elsif Carrier::ORANGE.include?(cr) %>
        <span class="badge badge-warning"><%= cr %></span>
      <% elsif Carrier::GREEN.include?(cr) %>
        <span class="badge badge-green"><%= cr %></span>
      <% end %>
    <% end %>
  </div>
</div>
<div class="row">
  <label class="col-md-3 col-form-label">PU Time:</label>
  <div class="col-md-9 lbl-padding-t">
    <%= truck_tile.pu_time %><%= truck_tile.pu_general_time %>
  </div>
</div>
<div class="row">
  <label class="col-md-3 col-form-label">Del Date:</label>
  <div class="col-md-9 lbl-padding-t">
    <%= truck_tile.load_date %>
  </div>
</div>
<div class="row">
  <label class="col-md-3 col-form-label">Del Time:</label>
  <div class="col-md-9 lbl-padding-t">
    <%= truck_tile.del_time %><%= truck_tile.del_general_time %>
  </div>
</div>
<div class="row">
  <label class="col-md-3 col-form-label">Team:</label>
  <div class="col-md-9 lbl-padding-t">
    <%= truck_tile.teams ? "Yes" : "No" %>
  </div>
</div>
<div class="row">
  <label class="col-md-3 col-form-label">Notes:</label>
  <div class="col-md-9 lbl-padding-t">
    <%= truck_tile.details %>
  </div>
</div>
<div class="row">
  <label class="col-md-3 col-form-label">Load:</label>
  <div class="col-md-9 lbl-padding-t">
    <%= truck_tile.load_tile && truck_tile.load_tile.uniq_id %>
  </div>
</div>
<p class="text-right">
    <%= link_to '<i class="far fa-edit fa-1-2x"></i>'.html_safe, edit_truck_tile_path(truck_tile), :remote => true, :id => 'edit_tile', :class => 'text-warning inline' %>
    <%= link_to '<i class="fas fa-trash-alt fa-1-2x"></i>'.html_safe, truck_tile, :remote => true, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'text-danger inline'%>
</p>
