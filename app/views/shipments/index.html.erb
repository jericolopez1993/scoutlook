<p id="notice"><%= notice %></p>

<h1>Shipments</h1>

<table>
  <thead>
    <tr>
      <th>Header</th>
      <th>Shipment date</th>
      <th>Tracking number</th>
      <th>Terms</th>
      <th>Origin</th>
      <th>Origin location</th>
      <th>Destination</th>
      <th>Destination location</th>
      <th>Distance</th>
      <th>Pieces</th>
      <th>Pallets</th>
      <th>Unit of weight</th>
      <th>Declared weight</th>
      <th>Billed weight</th>
      <th>Raw weight</th>
      <th>Service mode</th>
      <th>Billed rate</th>
      <th>Billed rate unit</th>
      <th>Surcharge ontario</th>
      <th>Surcharge non conveyables</th>
      <th>Surcharge non vault</th>
      <th>Surchange multi piece</th>
      <th>Surcharge fuel</th>
      <th>Surcharge weight</th>
      <th>Gst hst tax</th>
      <th>Total charge</th>
      <th>Total charge with tax</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shipments.each do |shipment| %>
      <tr>
        <td><%= shipment.header %></td>
        <td><%= shipment.shipment_date %></td>
        <td><%= shipment.tracking_number %></td>
        <td><%= shipment.terms %></td>
        <td><%= shipment.origin_id %></td>
        <td><%= shipment.origin_location_id %></td>
        <td><%= shipment.destination_id %></td>
        <td><%= shipment.destination_location_id %></td>
        <td><%= shipment.distance %></td>
        <td><%= shipment.pieces %></td>
        <td><%= shipment.pallets %></td>
        <td><%= shipment.unit_of_weight %></td>
        <td><%= shipment.declared_weight %></td>
        <td><%= shipment.billed_weight %></td>
        <td><%= shipment.raw_weight %></td>
        <td><%= shipment.service_mode %></td>
        <td><%= shipment.billed_rate %></td>
        <td><%= shipment.billed_rate_unit %></td>
        <td><%= shipment.surcharge_ontario %></td>
        <td><%= shipment.surcharge_non_conveyables %></td>
        <td><%= shipment.surcharge_non_vault %></td>
        <td><%= shipment.surchange_multi_piece %></td>
        <td><%= shipment.surcharge_fuel %></td>
        <td><%= shipment.surcharge_weight %></td>
        <td><%= shipment.gst_hst_tax %></td>
        <td><%= shipment.total_charge %></td>
        <td><%= shipment.total_charge_with_tax %></td>
        <td><%= link_to 'Show', shipment %></td>
        <td><%= link_to 'Edit', edit_shipment_path(shipment) %></td>
        <td><%= link_to 'Destroy', shipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

