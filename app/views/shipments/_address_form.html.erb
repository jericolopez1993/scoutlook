<div class="form-group row m-b-15 <%=name%>-location-fields address-fields">
  <%= form.label "#{name}_location_id", 'Select Location:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
  <div class="col-md-9 col-sm-8">
    <%= form.select "#{name}_location_id", locations.collect {|r| [ "#{((r.country == 'Canada' || r.country == "USA") ? (r.name + ' - ' + r.state + ', ' + r.country) : (r.name + ' - ' + r.address + ' ' + r.city + ' ' + r.state + ', ' + r.country + ' ' + r.postal))}", r.id ] },{:include_blank => true}, class: 'form-control static-dropdown', :id => "#{name}_location_id" %>
  </div>
</div>


<script language="javascript">
  <% if params[:action] == 'edit' %>
    locationDetailsOD($("#<%=name%>_location_id").val(), '<%=name%>');
  <% end %>
</script>
