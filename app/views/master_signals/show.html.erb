
<!-- begin page-header -->
<%= render 'layouts/static/header', header_title: 'Signals', sub_header_title: 'Create/Edit/View'%>
<!-- end page-header -->
<!-- begin row -->
<div class="row">
      <!-- begin col-6 -->
      <div class="col-lg-6">
    <!-- begin panel -->
      <div class="panel panel-inverse">
        <div class="panel-heading">
          <div class="panel-heading-btn">
            <%= link_to 'Edit', edit_master_signal_path(@master_signal), :class => 'btn btn-warning btn-xs' %>
            <%= link_to 'Back', master_signals_path, :class => 'btn btn-info btn-xs' %>
          </div>
          <h4 class="panel-title">  <%= generate_alphanumeric_id((master_signal.client.nil? ? '' : "#{master_signal.client.company_name}"), @master_signal.id) %></h4>
        </div>
        <div class="panel-body">

          <div class="form-group row m-b-15">
            <label class="col-md-3 col-form-label">Type:</label>
            <div class="col-md-7">
              <%= @master_signal.signal_type %>
            </div>
          </div>
          <div class="form-group row m-b-15">
            <label class="col-md-3 col-form-label">Signal Date:</label>
            <div class="col-md-7">
              <%= @master_signal.signal_date %>
            </div>
          </div>
          <div class="form-group row m-b-15">
            <label class="col-md-3 col-form-label">Client:</label>
            <div class="col-md-7">
              <%=  @master_signal.client.nil? ? "" : "#{generate_alphanumeric_id(@master_signal.client.client_type, @master_signal.client.id)} (#{@master_signal.client.company_name})" %>
            </div>
          </div>
          <div class="form-group row m-b-15">
            <label class="col-md-3 col-form-label">Contact:</label>
            <div class="col-md-7">
              <%=  @master_signal.client_contact.nil? ? "" : "#{generate_alphanumeric_id(@master_signal.client_contact.last_name, @master_signal.client_contact.id)} (#{@master_signal.client_contact.last_name})" %>
            </div>
          </div>
          <div class="form-group row m-b-15">
            <label class="col-md-3 col-form-label">Rate:</label>
            <div class="col-md-7">
              <%=  @master_signal.rate.nil? ? "" : "#{generate_alphanumeric_id(@master_signal.rate.rate_type, @master_signal.rate.id)} (#{@master_signal.rate.rate_type})" %>
            </div>
          </div>
          <div class="form-group row m-b-15">
            <label class="col-md-3 col-form-label">Start Date:</label>
            <div class="col-md-7">
              <%= @master_signal.start_date %>
            </div>
          </div>
          <div class="form-group row m-b-15">
            <label class="col-md-3 col-form-label">End Date:</label>
            <div class="col-md-7">
              <%= @master_signal.end_date %>
            </div>
          </div>
          </div>
        </div>
        <div class="panel panel-inverse">
          <div class="panel-heading">
            <div class="panel-heading-btn">
            </div>
            <h4 class="panel-title">Other Information</h4>
          </div>
          <div class="panel-body">
            <div class="form-group row m-b-15">
              <label class="col-md-3 col-form-label">Duration:</label>
              <div class="col-md-7">
                <%= @master_signal.duration %>
              </div>
            </div>
            <div class="form-group row m-b-15">
              <label class="col-md-3 col-form-label">Volume:</label>
              <div class="col-md-7">
                <%= @master_signal.volume %>
              </div>
            </div>
            <div class="form-group row m-b-15">
              <label class="col-md-3 col-form-label">UOM:</label>
              <div class="col-md-7">
                <%= @master_signal.uom %>
              </div>
            </div>
            <div class="form-group row m-b-15">
              <label class="col-md-3 col-form-label">Per:</label>
              <div class="col-md-7">
                <%= @master_signal.per %>
              </div>
            </div>
            <div class="form-group row m-b-15">
              <label class="col-md-3 col-form-label">Capacity Type:</label>
              <div class="col-md-7">
                <%= @master_signal.capacity_type %>
              </div>
            </div>
            <div class="form-group row m-b-15">
              <label class="col-md-3 col-form-label">Max Origin Diversion (in Miles):</label>
              <div class="col-md-7">
                <%= @master_signal.max_origin %>
              </div>
            </div>
            <div class="form-group row m-b-15">
              <label class="col-md-3 col-form-label">Max Destination Diversion (in Miles):</label>
              <div class="col-md-7">
                <%= @master_signal.max_destination %>
              </div>
            </div>
            <div class="form-group row m-b-15">
              <label class="col-md-3 col-form-label">Desired Rate:</label>
              <div class="col-md-7">
                <%= @master_signal.desired_rate %>
              </div>
            </div>
            <div class="form-group row m-b-15">
              <label class="col-md-3 col-form-label">Notes:</label>
              <div class="col-md-7">
                <%= @master_signal.notes.nil? ? "" : @master_signal.notes.html_safe %>
              </div>
            </div>

          </div>
        </div>
      </div>
  <div class="col-lg-6">
<!-- begin panel -->
<div class="panel panel-inverse">
  <div class="panel-heading">
    <div class="panel-heading-btn">
    </div>
    <h4 class="panel-title">Location</h4>
  </div>
  <div class="panel-body">
    <div class="form-group row m-b-15">
      <label class="col-md-3 col-form-label">Origin:</label>
      <div class="col-md-7">
        <%= @master_signal.origin_location.nil? ? "" : location_format(@master_signal.origin_location) %>
      </div>
    </div>
    <div class="form-group row m-b-15">
      <label class="col-md-3 col-form-label">Destination:</label>
      <div class="col-md-7">
        <%= @master_signal.destination_location.nil? ? "" : location_format(@master_signal.destination_location) %>
      </div>
    </div>
  </div>
</div>

</div>

</div>
<!-- end panel -->
