<!-- begin panel -->
<div style="width: 100%">
  <div class="panel panel-darkblue">
    <div class="panel-heading">
      <div class="panel-heading-btn">
        <%= link_to 'New Shipper', new_shipper_path, :class => 'btn btn-success btn-xs' %>
      </div>
      <h4 class="panel-title lp-header">Shippers</h4>
    </div>
    <div class="panel-body">
      <table class="table table-striped table-bordered display nowrap" data-order="[[7, &quot;asc&quot;]]" id="shipper_table">
        <thead>
          <tr>
            <th>Approved</th>
            <th>RO</th>
            <th>Class</th>
            <th>CR</th>
            <th>LstDateCon</th>
            <th>1M</th>
            <th>6M</th>
            <th>Name</th>
            <th>City</th>
            <th>ST/PV</th>
            <th>LPM</th>
            <th>Lane 1</th>
            <th>Lane 2</th>
            <th>Commodities</th>
            <th>DM Name</th>
            <th>DM Phone</th>
            <th>DM Email</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>Approved</th>
            <th>RO</th>
            <th>Class</th>
            <th>CR</th>
            <th>LstDateCon</th>
            <th>1M</th>
            <th>6M</th>
            <th>Name</th>
            <th>City</th>
            <th>ST/PV</th>
            <th>LPM</th>
            <th>Lane 1</th>
            <th>Lane 2</th>
            <th>Commodities</th>
            <th>DM Name</th>
            <th>DM Phone</th>
            <th>DM Email</th>
          </tr>
        </tfoot>
        <tbody class="spacer">
          <% @shippers.each do |shipper| %>
            <tr>
              <td class="text-center"><%= shipper.approved ? "<b class='text-success'>Y</b>".html_safe : "<i class='text-danger'>N</i>".html_safe %></td>
              <td class="text-center"><%= shipper.relationship_owner_user.nil? ? '' : "#{link_to("#{shipper.relationship_owner_user.first_name[0]}#{shipper.relationship_owner_user.last_name[0]}", shipper.relationship_owner_user)}".html_safe %></td>
              <td class="text-center"><%= shipper.sales_priority %></td>
              <td class="text-center"><%= shipper.complete_record ? "<b class='text-success'>Y</b>".html_safe : "<i class='text-danger'>N</i>".html_safe %></td>
              <td><%= shipper.last_contact_date.nil? || shipper.last_contact_date.date_opened.nil? ? "" : shipper.last_contact_date.date_opened.strftime('%d/%m/%Y').to_s %></td>
              <td><%= shipper.load_last_month %></td>
              <td><%= shipper.load_last_6_month %></td>
              <td><%= link_to shipper.company_name.blank? ? "(no name)" : shipper.company_name, shipper %></td>
              <td><%= shipper.head_office_location.nil? ? '' : shipper.head_office_location.city %></td>
              <td><%= shipper.head_office_location.nil? ? '' : shipper.head_office_location.state %></td>
              <td><%= shipper.loads_per_month %></td>
              <td>
                <% shipper.lane_1.each do |lane| %>
                  <%= link_to(((!lane.lane_origin.nil? && lane.lane_origin != "") ? "#{lane.lane_origin} &rarr; #{lane.lane_destination}".html_safe : "#{lane.lane_destination}"), lane, class: 'badge') %>
                <% end %>
              </td>
              <td>
                <% shipper.lane_2.each do |lane| %>
                  <%= link_to(((!lane.lane_origin.nil? && lane.lane_origin != "") ? "#{lane.lane_origin} &rarr; #{lane.lane_destination}".html_safe : "#{lane.lane_destination}"), lane, class: 'badge') %>
                <% end %>
              </td>
              <td>
                <% shipper.commodities_to_array.each do |cr| %>
                  <span class="badge badge-inverse"><%= cr %></span>
                <% end %>
              </td>
              <td><%= shipper.pdm.nil? ? '' : shipper.pdm.full_name %></td>
              <td><b><%= shipper.pdm.nil? ? '' : ((!shipper.pdm.primary_phone.nil? && shipper.pdm.primary_phone != "") ? (shipper.pdm.primary_phone + " (#{shipper.pdm.primary_phone_type})") : "") %></b></td>
              <td><% if !shipper.pdm.nil?  %><a href="mailto:<%= shipper.pdm.email %>?Subject=Hello%20<%= shipper.pdm.first_name.nil? ? '' :  shipper.pdm.first_name + " " + shipper.pdm.last_name  %>" target="_top"><%= shipper.pdm.email %>&nbsp;<i class="far fa-envelope"></i></a><% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script language="javascript">
  $(document).ready(function() {
    filterTable("shipper_table");
  });
</script>

<!-- end panel -->
