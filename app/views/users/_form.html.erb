<!-- begin page-header -->
<%= render 'layouts/static/header', header_title: params[:action] == 'new' ? 'Create New Users' : "Edit User - #{user.first_name} #{user.last_name}", sub_header_title: ''%>
<!-- end page-header -->
<!-- begin panel -->
<div class="panel panel-inverse">
  <div class="panel-heading">
    <div class="panel-heading-btn">
    </div>
    <h4 class="panel-title">Information</h4>
  </div>
  <div class="panel-body">
  <%= form_with(url: ((params[:action] == 'new' || params[:action] == 'create') ? "/users" : "/users/#{user.id}"),model: user, local: true, :html => {class: 'form-horizontal', 'data-parsley-validate' => true}) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

                <div class="form-group row m-b-15">
                  <%= form.label :first_name, 'First Name:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-9 col-sm-8">
                  <%= form.text_field :first_name, class: 'form-control' %>
                  </div>
                </div>

                <div class="form-group row m-b-15">
                  <%= form.label :last_name, 'Last Name:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-9 col-sm-8">
                  <%= form.text_field :last_name, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group row m-b-15">
                  <%= form.label :avatar, 'Avatar:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-9 col-sm-8">
                  <%= form.file_field :avatar %>
                  </div>
                </div>
                <div class="form-group row m-b-15">
                  <%= form.label :email, 'E-mail:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-9 col-sm-8">
                  <%= form.email_field :email, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group row m-b-15">
                  <%= form.label :admin, 'is Admin?:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-9 col-sm-8">
                    <div class="switcher">
                    <input type="checkbox"  name="admin" id="switcher_checkbox_1" <%= user.admin ? 'checked' : '' %> >
                    <label for="switcher_checkbox_1"></label>
                  </div>
                  </div>
                </div>
                <div class="form-group row m-b-0">
                  <label class="col-md-4 col-sm-4 col-form-label">&nbsp;</label>
                  <div class="col-md-9 col-sm-8">
                    <%= form.submit 'Submit', :class => 'btn btn-primary' %>
                    <% if params[:action] == 'edit' %>
                    &nbsp;&nbsp;<a class="btn btn-info" href="/users/<%= user.id %>">Show</a>
                    <% end %>
                    <% if params[:action] == 'new' %>
                      &nbsp;&nbsp;<%= link_to 'Back', users_path, :class => 'btn btn-default' %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
</div>
<!-- end panel -->
