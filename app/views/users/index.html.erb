
<!-- begin page-header -->
<%= render 'layouts/static/header', header_title: 'Users', sub_header_title: 'Create/Edit/View'%>
<!-- end page-header -->
<!-- begin panel -->
<div class="panel panel-inverse">
  <div class="panel-heading">
    <div class="panel-heading-btn">
    <%#= link_to 'New Users', new_user_path, :class => 'btn btn-primary btn-xs' %>
    </div>
    <h4 class="panel-title">List of Users</h4>
  </div>
  <div class="panel-body">
    <table id="data-table-buttons" class="table table-striped table-bordered data-table-buttons">
    								<thead>
    									<tr class="odd gradeX">
    										<th width="1%">#</th>
    										<th class="text-nowrap">Name</th>
    										<th class="text-nowrap">Email</th>
    										<th width="1%">Is admin?</th>
										    <th class="text-nowrap" data-orderable="false">Actions</th>
    									</tr>
    								</thead>
    								<tbody>
                      <% @users.each do |user| %>
                        <tr>
                          <td><%= generate_alphanumeric_id(((!user.last_name.nil? && user.last_name != "") ? user.last_name : user.first_name), user.id) %></td>
                          <td><%= user.first_name %> <%= user.last_name %></td>
                          <td><%= user.email %></td>
                          <td style="text-align: center;"><%= user.admin ? '<i class="text-green fas fa-user-check"></i>'.html_safe : '' %></td>
                          <td>
                            <a class="btn btn-warning btn-xs" href="/users/<%= user.id %>/edit"><i class="far fa-edit"></i></a>
                            <a data-confirm="Are you sure?" class="btn btn-danger btn-xs" rel="nofollow" data-method="delete" href="/users/<%= user.id %>"><i class="fas fa-trash-alt"></i></a>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
  </div>
</div>
<!-- end panel -->
