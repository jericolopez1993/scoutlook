
<!-- begin page-header -->
<%= render 'layouts/static/header', header_title: 'Users', sub_header_title: 'Create/Edit/View'%>
<!-- end page-header -->
<!-- begin panel -->
<div class="panel panel-inverse">
  <div class="panel-heading">
    <div class="panel-heading-btn">
    <%#= link_to 'New Users', new_user_path, :class => 'btn btn-primary btn-xs' %>
    </div>
    <h4 class="panel-title">List of Users</h4>
  </div>
  <div class="panel-body">
    <table id="data-table-buttons" class="table table-striped table-bordered data-table-buttons">
    								<thead>
    									<tr class="odd gradeX">
    										<th width="1%">#</th>
    										<th class="text-nowrap">Name</th>
    										<th class="text-nowrap">Email</th>
    									</tr>
    								</thead>
    								<tbody>
                      <% @users.each do |user| %>
                        <tr>
                          <td><%= generate_alphanumeric_id('User', user.id) %></td>
                          <td><%= user.first_name %> <%= user.last_name %></td>
                          <td><%= user.email %></td>

                        </tr>
                      <% end %>
                    </tbody>
                  </table>
  </div>
</div>
<!-- end panel -->
