<style>
  .nav-<%= @tile_tab.nil? ? '' : @tile_tab.id %> {
    background: #8753de;
    color: #fff!important;
  }
  .nav-<%= @tile_tab.nil? ? '' : @tile_tab.id %>:hover {
    color: #333!important;
  }
</style>
<% @tabs = TileTab.all %>
<div class="header-violet" >
  <h1 class="pull-left">
    <%= render 'layouts/static/header', header_title: "Load & Truck Tiles" %>
  </h1>
  <span class="pull-right">
    <button type="button" class="btn btn-indigo btn-xs" data-toggle="modal" data-target="#newTabForm">New Tab</button>
    <% if !@tile_tab.nil? %>
      <%= link_to 'Edit', edit_tile_tab_path(@tile_tab), :remote => true, :class => 'btn btn-warning btn-xs' %>
      <%= link_to 'Delete', @tile_tab, :remote => true, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-xs'%>
    <% end %>
  </span>
</div>
<div class="panel panel-inverse" style="top: 140px;">
  <div class="panel-heading" style="padding: 5px 15px">
    <div class="panel-heading" style="padding: 5px 0;">
      <ul class="nav nav-pills md-nav" style="margin-bottom: 0px; margin-left: -15px;">
        <% @tabs.each do |tab| %>
        <li class="nav-items">
          <a href="<%= tile_tab_path(tab)%>" class="nav-link show nav-<%= tab.id %>" style="padding:5px; margin: 0 0 0 10px">
            <span class="d-sm-block d-none"><h4 class="panel-title"><%= tab.name.titleize %></h4></span>
          </a>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
  <% if @tile_tab %>
    <div class="panel-body" style="padding: 5px 15px">
        <%= @tile_tab.nil? ? "" : @tile_tab.notes %>
    </div>
  <% end %>
</div>
