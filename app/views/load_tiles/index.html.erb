<p id="notice"><%= notice %></p>

<h1>Load Tiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @load_tiles.each do |load_tile| %>
      <tr>
        <td><%= load_tile.name %></td>
        <td><%= load_tile.status %></td>
        <td><%= load_tile.origin %></td>
        <td><%= load_tile.destination %></td>
        <td><%= load_tile.details %></td>
        <td><%= link_to 'Show', load_tile %></td>
        <td><%= link_to 'Edit', edit_load_tile_path(load_tile) %></td>
        <td><%= link_to 'Destroy', load_tile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Load Tile', new_load_tile_path %>
