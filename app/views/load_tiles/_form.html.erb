<%= form_with(model: load_tile, :html => {remote: true, class: 'form-horizontal', 'data-parsley-validate' => true, id: form_id}) do |form| %>
  <% if load_tile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(load_tile.errors.count, "error") %> prohibited this load_tile from being saved:</h2>
      <ul>
      <% load_tile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group row m-b-15">
    <%= form.label :name, 'Name:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
    <div class="col-md-9 col-sm-8">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row m-b-15">
    <%= form.label :load_date, 'Date:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
    <div class="col-md-9 col-sm-8">
      <%= form.text_field :load_date, class: 'form-control datepicker-autoClose', 'data-inputmask' => "'alias': 'mm/dd/yyyy'", :id => "last_load_date", :value => "#{load_tile.load_date.nil? ? "" : load_tile.load_date.strftime("%m/%d/%Y")}" %>
    </div>
  </div>
  <div class="form-group row m-b-15">
    <%= form.label :status, 'Status:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
    <div class="col-md-9 col-sm-8">
      <%= form.select :status, options_for_select(['Open', 'Covered', 'Hot', 'Stranded', 'Dropped'], ''), {:include_blank => false}, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row m-b-15">
    <%= form.label :origin, 'Origin:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
    <div class="col-md-9 col-sm-8">
      <%= form.select :origin, grouped_options_for_select(CarrierLane::ORIGINS), {:include_blank => false}, class: 'new-load-origin-multiple', multiple: true %>
    </div>
  </div>
  <div class="form-group row m-b-15">
    <%= form.label :destination, 'Destination:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
    <div class="col-md-9 col-sm-8">
      <%= form.select :destination, grouped_options_for_select(CarrierLane::DESTINATIONS), {:include_blank => false}, class: 'new-load-destination-multiple', multiple: true %>
    </div>
  </div>
  <div class="form-group row m-b-15">
    <%= form.label :details, 'Details:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
    <div class="col-md-9 col-sm-8">
      <%= form.text_area(:details, rows: 5, class: 'form-control') %>
    </div>
  </div>
  <div class="form-group row m-b-15">
    <div class="col-md-2"></div>
    <div class="col-md-9 col-sm-12 d-flex justify-content-end">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>&nbsp;
      <% if !load_tile.id.nil? %>
        <%= link_to "Back", load_tile, :remote => true, :id => 'show_tile', :class => 'btn btn-success' %>&nbsp;
      <% end %>
      <%= form.submit 'Submit', :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
