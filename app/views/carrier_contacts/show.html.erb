<div class="header-scout">
  <h1 class="pull-left">
    <%= render 'layouts/static/header', header_title: "#{@carrier_contact.carrier.nil? ? '' : generate_alphanumeric_id(@carrier_contact.carrier.company_name, @carrier_contact.carrier.id)}", sub_header_title: "#{@carrier_contact.carrier.nil? ? '' : link_to(@carrier_contact.carrier.company_name,  @carrier_contact.carrier)}"  %>
  </h1>
  <span class="pull-right">
    <% if current_user.has_role?(:admin) %>
      <%= link_to 'Edit', edit_carrier_contact_path(@carrier_contact), :class => 'btn btn-warning btn-xs', target: :_blank %>
      <%= link_to 'Back', carrier_path(:id => @carrier_contact.carrier_id), :class => 'btn btn-info btn-xs' %>
    <% end %>
  </span>
</div>

<div class="panel panel-inverse">
  <div class="panel-heading">
    <h4 class="panel-title"></h4>
  </div>
  <div class="panel-body">
    <%= render 'carrier_contacts/show_fields', carrier_contact: @carrier_contact %>
  </div>
</div>
