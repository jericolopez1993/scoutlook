    <div class="col-2">
      <div class="form-group">
        <%= form.label :declared_weight, 'Declared Weight:'%>
        <%= form.text_field :declared_weight, class: 'form-control', 'data-inputmask' => "'alias': 'numeric', 'groupSeparator': ',', 'autoGroup': true, 'digits': 2, 'digitsOptional': false, 'prefix': '', 'placeholder': '0'"%>
      </div>
    </div>
    <div class="col-2">
      <div class="form-group">
        <%= form.label :billed_weight, 'Billed Weight:'%>
