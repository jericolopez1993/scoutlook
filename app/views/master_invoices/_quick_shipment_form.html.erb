        <%= form.text_field :gst_hst_tax, class: 'form-control total_charge_fields total_charge_with_tax_fields', 'data-inputmask' => "'alias': 'numeric', 'groupSeparator': ',', 'autoGroup': true, 'digits': 2, 'digitsOptional': false, 'prefix': '$ ', 'placeholder': '0'" %>
      </div>
    </div>
</div>

