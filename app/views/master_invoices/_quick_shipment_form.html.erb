<div class="row">
    <div class="col-4">
      <div class="form-group">
        <%= form.label :shipment_date, 'Date *:'%>
        <%= form.text_field :shipment_date, class: 'form-control datepicker-autoClose', 'data-inputmask' => "'alias': 'mm/dd/yyyy'", 'data-parsley-required' => true %>
      </div>
    </div>
    <div class="col-4">
      <div class="form-group">
        <%= form.label :tracking_number, 'Tracking Number *:'%>
        <%= form.text_field :tracking_number, class: 'form-control', 'data-parsley-required' => true %>
      </div>
    </div>
    <div class="col-4">
      <div class="form-group">
        <%= form.label :terms, 'Terms *:' %>
        <%= form.select :terms, options_for_select(['Prepaid', 'Collect']),{:include_blank => true}, class: 'form-control' %>
      </div>
    </div>
</div>
<div class="row">
    <div class="col-3">
      <div class="form-group">
        <%= form.label :origin_id, 'Origin *:'%>
        <%= form.select :origin_id, Client.all.collect {|l| [l.company_name, l.id]},{:include_blank => true}, class: 'form-control', id: 'origin_id', 'data-parsley-required' => true %>
      </div>
    </div>
    <div class="col-3">
      <div class="form-group">
        <%= form.label :origin_location_id, 'Origin Location *:'%>
        <%= form.select :origin_location_id, ClientLocation.all.collect {|l| [l.name, l.id, {'data-chained'=> "#{l.client_id}"}]},{:include_blank => true}, class: 'form-control', id: 'origin_location_id', 'data-parsley-required' => true %>
      </div>
    </div>
    <div class="col-3">
      <div class="form-group">
        <%= form.label :destination_id, 'Destination *:'%>
        <%= form.select :destination_id, Client.all.collect {|l| [l.company_name, l.id]},{:include_blank => true}, class: 'form-control', id: 'origin_id', 'data-parsley-required' => true %>
      </div>
    </div>
    <div class="col-3">
      <div class="form-group">
        <%= form.label :destination_location_id, 'Destination Location *:'%>
        <%= form.select :destination_location_id, ClientLocation.all.collect {|l| [l.name, l.id, {'data-chained'=> "#{l.client_id}"}]},{:include_blank => true}, class: 'form-control', id: 'origin_location_id', 'data-parsley-required' => true %>
      </div>
    </div>
</div>
