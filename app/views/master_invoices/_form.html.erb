<!-- begin page-header -->
<%= render 'layouts/static/header', header_title: 'Master Invoices', sub_header_title: 'Create/Edit/View'%>
<!-- end page-header -->
<!-- begin panel -->
<div class="panel panel-inverse">
  <div class="panel-heading">
    <div class="panel-heading-btn">
    </div>
    <h4 class="panel-title"> <%= params[:action] == 'new' ? 'Create New Invoice' : "Edit Invoice ##{generate_alphanumeric_id(master_invoice.shipment_type, master_invoice.id)}"%></h4>
  </div>
  <div class="panel-body">
  <%= form_with(model: master_invoice, local: true, :html => {class: 'form-horizontal', 'data-parsley-validate' => true}) do |form| %>
  <% if master_invoice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(master_invoice.errors.count, "error") %> prohibited this master_invoice from being saved:</h2>

      <ul>
      <% master_invoice.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

                <div class="form-group row m-b-15">
                  <%= form.label :shipment_type, 'Shipment Type*:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-8 col-sm-8">
                  <%= form.select :shipment_type, options_for_select(['Broker', 'Process', 'Audit'], master_invoice.shipment_type),{:include_blank => true}, class: 'form-control', 'data-parsley-required' => true %>
                  </div>

                </div>
                <div class="form-group row m-b-15">
                  <%= form.label :shipper_id, 'Shipper *:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-8 col-sm-8">
                  <%= form.select :shipper_id, Client.where(:client_type => 'Shipper').collect {|l| [l.company_name, l.id]},{:include_blank => true, :selected => master_invoice.shipper_id}, class: 'form-control', 'data-parsley-required' => true %>
                  </div>
                </div>

                <div class="form-group row m-b-15">
                  <%= form.label :carrier_id, 'Carrier *:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-8 col-sm-8">
                  <%= form.select :carrier_id, Client.where(:client_type => 'Carrier').collect {|l| [l.company_name, l.id]},{:include_blank => true, :selected => master_invoice.carrier_id}, class: 'form-control', 'data-parsley-required' => true %>
                  </div>
                </div>
                <div class="form-group row m-b-15">
                  <%= form.label :master_account, 'Master Account *:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-8 col-sm-8">
                  <%= form.text_field :master_account, class: 'form-control', 'data-parsley-required' => true %>
                  </div>
                </div>
                <div class="form-group row m-b-15">
                  <%= form.label :single_invoice_date, 'Single Invoice Date:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-8 col-sm-8">
                  <%= form.date_select :single_invoice_date, class: 'form-control', order: [:month, :day, :year], use_short_month: true  %>
                  </div>
                </div>
                <div class="form-group row m-b-15">
                  <%= form.label :invoicing_period_start, 'Invoicing Period Start:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-8 col-sm-8">
                  <%= form.date_select :invoicing_period_start, class: 'form-control', order: [:month, :day, :year], use_short_month: true %>
                  </div>
                </div>
                <div class="form-group row m-b-15">
                  <%= form.label :invoicing_period_end, 'Invoicing Period End:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-8 col-sm-8">
                  <%= form.date_select :invoicing_period_end, class: 'form-control', order: [:month, :day, :year], use_short_month: true %>
                  </div>
                </div>
                <div class="form-group row m-b-15">
                  <%= form.label :total_charge, 'Total Charge:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-8 col-sm-8">
                  <%= form.text_field :total_charge, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group row m-b-15">
                  <%= form.label :variance, 'Variance:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-8 col-sm-8">
                  <%= form.text_field :variance, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group row m-b-15">
                  <label class="col-md-4 col-sm-4 col-form-label"> Variance Approved?</label>
                  <div class="col-md-8 col-sm-8">
                    <input type="checkbox" name="variance_approved" data-render="switchery" data-theme="default" data-secondary-color="rgb(255, 91, 87)" <%= master_invoice.variance_approved ? 'checked' : '' %>/>
                  </div>
                </div>
                <div class="form-group row m-b-0">
                  <label class="col-md-4 col-sm-4 col-form-label">&nbsp;</label>
                  <div class="col-md-8 col-sm-8">
                    <%= form.submit 'Submit', :class => 'btn btn-primary' %>
                    <% if params[:action] == 'edit' %>
                      &nbsp;&nbsp;<%= link_to 'Show', master_invoice, :class => 'btn btn-info' %>
                    <% end %>
                    <% if params[:action] == 'new' %>
                      &nbsp;&nbsp;<%= link_to 'Back', master_invoices_path, :class => 'btn btn-default' %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
</div>
