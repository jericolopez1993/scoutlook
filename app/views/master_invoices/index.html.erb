<!-- begin page-header -->
<%= render 'layouts/static/header', header_title: 'Master Invoices', sub_header_title: 'Create/Edit/View'%>
<!-- end page-header -->
<!-- begin panel -->
<div class="panel panel-inverse">
  <div class="panel-heading">
    <div class="panel-heading-btn">
    <%= link_to 'New Master Invoice', new_master_invoice_path, :class => 'btn btn-primary btn-xs' %>
    </div>
    <h4 class="panel-title">List of Invoices</h4>
  </div>
  <div class="panel-body">
    <table id="data-table-buttons" class="table table-striped table-bordered data-table-buttons">
    								<thead>
    									<tr class="odd gradeX">
    										<th width="1%">#</th>
    										<th class="text-nowrap">Shipper</th>
    										<th class="text-nowrap">Carrier</th>
    										<th class="text-nowrap">Type</th>
    										<th class="text-nowrap">Single invoice date</th>
    										<th class="text-nowrap">Invoicing period start</th>
    										<th class="text-nowrap">Invoicing period end</th>
										    <th class="text-nowrap" data-orderable="false">Actions</th>
    									</tr>
    								</thead>
    								<tbody>
                      <% @master_invoices.each do |master_invoice| %>
                        <tr>
                          <td><%= generate_alphanumeric_id(master_invoice.shipment_type, master_invoice.id) %></td>
                          <td><%= master_invoice.shipper.nil? ? '' : master_invoice.shipper.company_name %></td>
                          <td><%= master_invoice.carrier.nil? ? '' : master_invoice.carrier.company_name %></td>
                          <td><%= master_invoice.shipment_type %></td>
                          <td><%= master_invoice.single_invoice_date %></td>
                          <td><%= master_invoice.invoicing_period_start %></td>
                          <td><%= master_invoice.invoicing_period_end %></td>
                          <td>
                            <%= link_to '<i class="far fa-eye"></i>'.html_safe, master_invoice, :class => 'btn btn-info btn-xs' %>
                            <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_master_invoice_path(master_invoice), :class => 'btn btn-warning btn-xs' %>
                            <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, master_invoice, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-xs'%>
                          </td>
                        </tr>
                      <% end %>

                    </tbody>
                  </table>
  </div>
</div>
<!-- end panel -->
