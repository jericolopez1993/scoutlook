<% if carrier.c_lane_origin %>
  <% carrier.c_lane_origin.split(',').map(&:to_s).each_with_index do |origin, index| %>
    <%= generate_location2(origin, 'carrier', carrier.c_lane_id).html_safe %>
    <% break if index == 2 %>
  <% end %>
<% end %>
<% if carrier.c_lane_destination %>
  &rarr;
  <% carrier.c_lane_destination.split(',').map(&:to_s).each_with_index do |destination, index| %>
    <%= generate_location2(destination, 'carrier', carrier.c_lane_id).html_safe %>
    <% break if index == 2 %>
  <% end %>
<% end %>
