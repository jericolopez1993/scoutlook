<style>
@media (max-width: 767px) {
  label {
    text-align: left!important;
  }
}
label {
  text-align: right;
}
</style>
<!-- begin page-header -->
<div class="header-scout">
  <h1 class="pull-left">
    <%= render 'layouts/static/header', header_title: "#{@activity.carrier.nil? ? '' : generate_alphanumeric_id(@activity.carrier.company_name, @activity.carrier.id)}", sub_header_title: "#{@activity.carrier.nil? ? '' : link_to(@activity.carrier.company_name,  @activity.carrier)}"  %>
  </h1>
  <span class="pull-right">
    <%= link_to 'Edit', edit_activity_path(@activity), :class => 'btn btn-warning btn-xs' %>&nbsp;&nbsp;
    <% if !@activity.carrier.nil? %>
      <% carrier = Carrier.find(@activity.carrier_id)%>
      <%= link_to 'Back to Carrier', carrier, :class => 'btn btn-info btn-xs' %>
    <% elsif !@activity.shipper.nil? %>
      <% shipper = Shipper.find(@activity.shipper_id)%>
      <%= link_to 'Back to Shipper', shipper, :class => 'btn btn-info btn-xs' %>
    <% else %>
      <%= link_to 'Back', carrier_activities_path, :class => 'btn btn-info btn-xs' %>
    <% end %>
  </span>
</div>
<!-- end page-header -->
<!-- begin panel -->
<div class="panel panel-inverse">
  <div class="panel-heading">
    <h4 class="panel-title">  <%= generate_alphanumeric_id(@activity.activity_type, @activity.id) %> - <%= @activity.activity_type %></h4>
  </div>
  <div class="panel-body">
    <h4 class="text-inverse">Outcome</h4>
    <div class="row">
      <label class="col-md-2 col-form-label">Campaign:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @activity.campaign_name %>
      </div>
    </div>
    <div class="row">
      <label class="col-md-2 col-form-label">Open Date:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @activity.date_stamp %>
      </div>
    </div>
    <div class="row">
      <label class="col-md-2 col-form-label">Type:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @activity.activity_type %>
      </div>
    </div>

    <% if @activity.activity_type == "Engagement" %>
      <div class="row">
        <label class="col-md-2 col-form-label">Engagement Type:</label>
        <div class="col-md-9 lbl-padding-t">
          <%= @activity.engagement_type %>
        </div>
      </div>
    <% end %>

    <div class="row">
      <label class="col-md-2 col-form-label">Contact:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @activity.carrier_contact.nil? ? "" : (link_to "#{@activity.carrier_contact.full_name}", edit_carrier_contact_path(@activity.carrier_contact)) %>
      </div>
    </div>

    <div class="row">
      <label class="col-md-2 col-form-label">Steward:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @activity.user.nil? ? "" : (link_to "#{@activity.user.first_name} #{@activity.user.last_name}", @activity.user) %>
      </div>
    </div>

    <div class="row">
      <label class="col-md-2 col-form-label">Annual Value:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @activity.annual_value %>
      </div>
    </div>

    <div class="row">
      <label class="col-md-2 col-form-label">Loads Per Week:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @activity.loads_per_week %>
      </div>
    </div>

    <div class="row">
      <label class="col-md-2 col-form-label">Status:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @activity.status ? 'Open' : 'Closed' %>
      </div>
    </div>
    <div class="row">
      <label class="col-md-2 col-form-label">Date Opened:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= convert_date(@activity.date_opened) %>
      </div>
    </div>
    <div class="row">
      <label class="col-md-2 col-form-label">Date Closed:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= convert_date(@activity.date_closed) %>
      </div>
    </div>
    <div class="row">
      <label class="col-md-2 col-form-label">Other Notes:</label>
      <div class="col-md-9 lbl-padding-t">
        <%= @activity.other_notes.nil? ? "" : @activity.other_notes.html_safe %>
      </div>
    </div>
      <hr>
      <h4 class="text-inverse">Outcome</h4>
      <div class="row">
        <label class="col-md-2 col-form-label">Outcome:</label>
        <div class="col-md-9 lbl-padding-t">
          <%= @activity.outcome %>
        </div>
      </div>
      <div class="row">
        <label class="col-md-2 col-form-label">Complete Credit Application:</label>
        <div class="col-md-9 lbl-padding-t">
          <% if @activity.credit_application.attached? %>
            <%= link_to @activity.credit_application.filename, rails_blob_path(@activity.credit_application), target: :_blank %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <label class="col-md-2 col-form-label">Reason:</label>
        <div class="col-md-9 lbl-padding-t">
          <%= @activity.reason %>
          <% if @activity.reason == 'Other' %>
            - <%= @activity.reason_other %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <label class="col-md-2 col-form-label">Notes:</label>
        <div class="col-md-9 lbl-padding-t">
          <%= @activity.notes.nil? ? "" : @activity.notes.html_safe %>
        </div>
      </div>
    <hr>
    <h4 class="text-inverse">Rates</h4>
    <%= link_to 'New Rate', new_rate_path(:activity_id => @activity.id), :class => 'btn btn-primary btn-xs' %>
      <%= render 'rates/table', rates: Rate.where(:activity_id => @activity.id), with_actions: true %>
    <hr>
    <h4 class="text-inverse">Proposed PDFs</h4>
    <table class="table table-striped table-bordered data-table-no-buttons display nowrap">
      <thead>
        <tr class="odd gradeX">
          <th width="1%"></th>
          <th>Name</th>
          <th>Date</th>
          <th data-orderable="false"></th>
        </tr>
      </thead>
      <tbody>
        <% @activity.proposal_pdf.each_with_index do |attachment_file, index| %>
          <tr>
            <td><%= attachment_file.id %></td>
            <td><%= attachment_file.filename %></td>
            <td><%= convert_date(attachment_file.created_at) %></td>
            <td>
              <%= link_to '<i class="fas fa-download"></i>'.html_safe, rails_blob_path(attachment_file), target: :_blank, :class => 'btn btn-primary' %>
              <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, remove_attachment_carrier_activities_path(:id => @activity.id, :attachment_id => attachment_file.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger'%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- end panel -->
