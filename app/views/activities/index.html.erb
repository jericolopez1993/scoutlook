<!-- begin page-header -->
<%#= render 'layouts/static/header', header_title: 'Activities' %>
<!-- end page-header -->
<!-- begin panel -->
<% if params[:controller] == "activities" %>
  <style>
    .tooltip-inner {
      background-color: #dd8b00!important;
    }
    .tooltip .arrow::before{
      border-right-color: #dd8b00!important;
    }
    td.link a:visited {
      color: #dd8b00!important;
    }
    .learned p {
      margin-bottom: 0!important;
    }
  </style>
<% elsif params[:controller] == "carriers" %>
  <style>
    td.link a:visited {
      color: #6f060b!important;
    }
  </style>
<% elsif params[:controller] == "shippers" %>
  <style>
    td.link a:visited {
      color: #013a38!important;
    }
  </style>
<% end %>
<div class="panel panel-inverse">
  <div class="panel panel-yelloworange">
    <div class="panel-heading">
      <div class="panel-heading-btn">
        <% if !is_mobile %>
          <%= link_to 'New Carrier Activity', new_activity_path(:previous_controller => params[:controller], :client_type => "carrier"), :class => 'btn btn-warning btn-xs m-font' %>
          <%= link_to 'New Shipper Activity', new_activity_path(:previous_controller => params[:controller], :client_type => "shipper"), :class => 'btn btn-warning btn-xs m-font' %>
        <% else %>
          <div class="btn-group">
            <button class="btn btn-warning btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              New Activity
            </button>
            <div class="dropdown-menu">
              <%= link_to 'New Carrier Activity', new_activity_path(:previous_controller => params[:controller], :client_type => "carrier"), :class => 'dropdown-item' %>
              <%= link_to 'New Shipper Activity', new_activity_path(:previous_controller => params[:controller], :client_type => "shipper"), :class => 'dropdown-item' %>
            </div>
          </div>
        <% end %>
      </div>
      <h4 class="panel-title lp-header">Activities</h4>
    </div>
    <div class="panel-body">
      <table class="table table-striped table-bordered display nowrap"  id="activities_table">
        <thead>
          <tr>
            <th data-orderable="false">Actions</th>
            <th>SP</th>
            <th>Name</th>
            <th>ST/PV</th>
            <th>LPW</th>
            <th>Open</th>
            <th>Close</th>
            <th>Outcome</th>
            <th>Learned</th>
            <th>Type</th>
            <th>Status</th>
            <th>Reason</th>
          </tr>
        </thead>
      </table>

    </div>
  </div>
</div>
<!-- end panel -->
