<table class="table table-striped table-bordered display"  id="activities_table">
  <thead>
    <tr class="odd gradeX">
      <th>Owner</th>
      <th>Status</th>
      <th>Type</th>
      <th>LPW</th>
      <th>Annual</th>
      <th>Open</th>
      <th>Close</th>
      <th>Outcome</th>
      <th>Reason</th>
      <th>Learned</th>
      <% if show_carrier || show_shipper %>
        <% if show_carrier %>
          <th>Carrier</th>
        <% end %>
        <% if show_shipper %>
          <th>Shipper</th>
        <% end %>
        <th>Contact</th>
        <th>Priority</th>
        <th>City</th>
        <th>State</th>
      <% end %>
      <th data-orderable="false">Actions</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th>Owner</th>
      <th>Status</th>
      <th>Type</th>
      <th>LPW</th>
      <th>Annual</th>
      <th>Open</th>
      <th>Close</th>
      <th>Outcome</th>
      <th>Reason</th>
      <th width="250px">Learned</th>
      <% if show_carrier || show_shipper %>
        <% if show_carrier %>
          <th>Carrier</th>
        <% end %>
        <% if show_shipper %>
          <th>Shipper</th>
        <% end %>
        <th>Contact</th>
        <th>Priority</th>
        <th>City</th>
        <th>State</th>
      <% end %>
      <th data-orderable="false">Actions</th>
    </tr>
  </tfoot>
  <tbody>
    <% if !activities.nil? %>
      <% activities.each do |activity| %>
        <tr>
          <td nowrap><%= activity.user.nil? ? "" : (link_to "#{activity.user.first_name} #{activity.user.last_name}", activity.user) %></td>
          <td><%= activity.status ? 'Open' : 'Closed' %></td>
          <td nowrap><%= activity.activity_type %></td>
          <td><%= activity.loads_per_week %></td>
          <td><%= activity.annual_value %></td>
          <td nowrap><%= convert_date(activity.date_opened) %></td>
          <td nowrap><%= convert_date(activity.date_closed) %></td>
          <td><%= activity.outcome %></td>
          <td><%= activity.reason %></td>
          <td><%= activity.notes.nil? ? "" : activity.notes.html_safe %></td>
          <% if show_carrier || show_shipper %>
            <% if show_carrier %>
            <td>
              <%= activity.carrier && link_to(activity.carrier.company_name.blank? ? "(no name)" : activity.carrier.company_name, activity.carrier) %>
            </td>
            <% end %>
            <% if show_shipper %>
              <td>
                <%= activity.shipper && link_to(activity.shipper.company_name.blank? ? "(no name)" : activity.shipper.company_name, activity.shipper) %>
              </td>
            <% end %>
            <% if show_carrier && !activity.carrier.nil? %>
              <td><%= activity.carrier_contact.nil? ? "" : (link_to "#{activity.carrier_contact.full_name}", edit_carrier_contact_path(activity.carrier_contact)) %></td>
              <td><%= activity.carrier.nil? || activity.carrier.sales_priority.blank? ? "" : activity.carrier.sales_priority %></td>
              <td><%= activity.carrier.nil? || activity.carrier.head_office_location.nil? ? "" : activity.carrier.head_office_location.city %></td>
              <td><%= activity.carrier.nil? || activity.carrier.head_office_location.nil? ? "" : activity.carrier.head_office_location.state %></td>
            <% elsif show_shipper && !activity.shipper.nil? %>
              <td><%= activity.shipper_contact.nil? ? "" : (link_to "#{activity.shipper_contact.full_name}", edit_shipper_contact_path(activity.shipper_contact)) %></td>
              <td><%= activity.shipper.nil? || activity.shipper.sales_priority.blank? ? "" : activity.shipper.sales_priority %></td>
              <td><%= activity.shipper.nil? || activity.shipper.head_office_location.nil? ? "" : activity.shipper.head_office_location.city %></td>
              <td><%= activity.shipper.nil? || activity.shipper.head_office_location.nil? ? "" : activity.shipper.head_office_location.state %></td>
            <% else %>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
            <% end %>
          <% end %>
          <td nowrap>
            <%= link_to '<i class="far fa-eye"></i>'.html_safe, activity_path(:id => activity.id, :previous_controller => params[:controller]), :class => 'btn btn-info btn-xs' %>
            <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_activity_path(:id => activity.id, :previous_controller => params[:controller]), :class => 'btn btn-warning btn-xs' %>
            <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, activity_path(:id => activity.id, :previous_controller => params[:controller]), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-xs'%>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<script language="javascript">
  $(document).ready(function() {
    filterTable("activities_table");
  });
</script>
