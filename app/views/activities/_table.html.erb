<% if params[:controller] == "activities" %>
  <style>
    .tooltip-inner {
      background-color: #dd8b00!important;
    }
    .tooltip .arrow::before{
      border-right-color: #dd8b00!important;
    }
    td.link a:visited {
      color: #dd8b00!important;
    }
    .learned p {
      margin-bottom: 0!important;
    }
  </style>
<% elsif params[:controller] == "carriers" %>
  <style>
    td.link a:visited {
      color: #6f060b!important;
    }
  </style>
<% elsif params[:controller] == "shippers" %>
  <style>
    td.link a:visited {
      color: #013a38!important;
    }
  </style>
<% end %>
<table class="table table-striped table-bordered display nowrap"  id="activities_table" data-order="[[3, &quot;asc&quot;]]">
  <thead>
    <tr>
      <th data-orderable="false">Actions</th>
      <th>SP</th>
      <th>Name</th>
      <th>ST/PV</th>
      <th>LPW</th>
      <th>Open</th>
      <th>Close</th>
      <th>Outcome</th>
      <th>Learned</th>
      <th>Type</th>
      <th>Status</th>
      <th>Reason</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th>Actions</th>
      <th>SP</th>
      <th>Name</th>
      <th>ST/PV</th>
      <th>LPW</th>
      <th>Open</th>
      <th>Close</th>
      <th>Outcome</th>
      <th>Learned</th>
      <th>Type</th>
      <th>Status</th>
      <th>Reason</th>
    </tr>
  </tfoot>
  <tbody class="spacer">
    <% if !activities.nil? %>
      <% activities.each do |activity| %>
        <tr>
          <td>
          <%= link_to '<i class="far fa-eye"></i>'.html_safe, activity_path(:id => activity.id, :previous_controller => current_controller), :class => 'btn btn-info btn-xs' %>
            <% if !activity.carrier.nil? %>
              <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_activity_path(:id => activity.id, :previous_controller => current_controller, :client_type => "carrier"), :class => 'btn btn-warning btn-xs' %>
            <% elsif !activity.shipper.nil? %>
              <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_activity_path(:id => activity.id, :previous_controller => current_controller, :client_type => "shipper"), :class => 'btn btn-warning btn-xs' %>
            <% end %>
            <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, activity_path(:id => activity.id, :previous_controller => current_controller), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-xs'%>
            <%= link_to '<i class="far fa-paper-plane"></i>'.html_safe, new_mail_path(:id => activity.id, :previous_controller => 'activities'), :class => 'btn btn-dark btn-xs'%>
            <%= link_to '<i class="far fa-file-pdf"></i>'.html_safe, generate_pdf_activities_path(:id => activity.id), target: :_blank, :class => 'btn btn-indigo btn-xs'%>
          </td>
          <td class="text-center link"><%= activity.user.nil? ? "" : (link_to "#{activity.user.first_name[0]}#{activity.user.last_name[0]}", activity.user) %></td>
            <td class="link">
              <% if show_carrier || show_shipper %>
                <% if show_carrier && activity.carrier %>
                <span
                  data-toggle="tooltip"
                  data-placement="right"
                  data-html="true"
                  title="
                    <b>Name</b>: <%= activity.carrier && (activity.carrier.company_name.blank? ? "(no name)" : activity.carrier.company_name) %><br>
                    <b>Ops Name</b>: <%= activity.carrier && (activity.carrier.poc.nil? ? '' : activity.carrier.poc.full_name) %><br>
                    <b>Ops Phone</b>: <%= activity.carrier && (activity.carrier.poc.nil? ? '' : ((!activity.carrier.poc.primary_phone.nil? && activity.carrier.poc.primary_phone != "") ? (activity.carrier.poc.primary_phone + ((!activity.carrier.poc.primary_extension_number.nil? && activity.carrier.poc.primary_extension_number != "") ? (", Ext. " + carrier.poc.primary_extension_number) : "") + ((activity.carrier.poc.primary_phone_type != "") ? (" (#{(activity.carrier.poc.primary_eligible_texting ? "TEXT" : activity.carrier.poc.primary_phone_type)})") : "")) : "")) %><br>
                    <b>Ops Email</b>: <%= activity.carrier && (activity.carrier.poc.nil? ? '' : activity.carrier.poc.email.downcase) %><br>
                    <b>Class</b>: <%= activity.carrier && (activity.carrier.sales_priority) %><br>
                    <b>MC Number</b>: <%= activity.carrier && (activity.carrier.mc_number) %><br>
                    <b>Reefers Count</b>: <%= activity.carrier && activity.carrier.reefers %><br>
                    <b>Sate/Province</b>: <%= activity.carrier && (activity.carrier.location.nil? ? '' : activity.carrier.location.state) %><br>
                    <b>Last Contact Date</b>: <%= activity.carrier && (activity.carrier.last_contact_date.nil? || activity.carrier.last_contact_date.date_opened.nil? ? "" : activity.carrier.last_contact_date.date_opened.strftime('%m/%d/%Y').to_s) %><br>
                  ">
                    <%= activity.carrier && link_to(activity.carrier.company_name.blank? ? "(no name)" : activity.carrier.company_name, activity.carrier) %>
                </span>
                <% end %>
                <% if show_shipper && activity.shipper && show_carrier && activity.carrier %>
                &nbsp;/&nbsp;
                <% end %>
                <% if show_shipper && activity.shipper %>
                    <span
                      data-toggle="tooltip"
                      data-placement="right"
                      data-html="true"
                      title="
                        <b>Name</b>: <%= activity.shipper && (activity.shipper.company_name.blank? ? "(no name)" : activity.shipper.company_name) %><br>
                        <b>DM Name</b>: <%= activity.shipper && (activity.shipper.pdm.nil? ? '' : activity.shipper.pdm.full_name) %><br>
                        <b>DM Phone</b>: <%= activity.shipper && (activity.shipper.pdm.nil? ? '' : ((!activity.shipper.pdm.primary_phone.nil? && activity.shipper.pdm.primary_phone != "") ? (activity.shipper.pdm.primary_phone + ((!activity.shipper.pdm.primary_extension_number.nil? && activity.shipper.pdm.primary_extension_number != "") ? (", Ext. " + activity.shipper.pdm.primary_extension_number) : "") + ((activity.shipper.pdm.primary_phone_type != "") ? (" (#{(activity.shipper.pdm.primary_eligible_texting ? "TEXT" : activity.shipper.pdm.primary_phone_type)})") : "")) : "")) %><br>
                        <b>DM Email</b>: <%= activity.shipper && (activity.shipper.pdm.nil? ? '' : activity.shipper.pdm.email.downcase) %><br>
                        <b>Class</b>: <%= activity.shipper && (activity.shipper.sales_priority) %><br>
                        <b>City</b>: <%= activity.shipper && (activity.shipper.location.nil? ? '' : activity.shipper.location.city) %><br>
                        <b>Sate/Province</b>: <%= activity.shipper && (activity.shipper.location.nil? ? '' : activity.shipper.location.state) %><br>
                        <b>Last Contact Date</b>: <%= activity.shipper && (activity.shipper.last_contact_date.nil? || activity.shipper.last_contact_date.date_opened.nil? ? "" : activity.shipper.last_contact_date.date_opened.strftime('%m/%d/%Y').to_s) %><br>
                      ">
                        <%= activity.shipper && link_to(activity.shipper.company_name.blank? ? "(no name)" : activity.shipper.company_name, activity.shipper) %>
                    </span>
                <% end %>
              <% end %>
            </td>
            <td>
              <% if show_carrier || show_shipper %>
                <% if show_carrier && activity.carrier %>
                  <%= activity.shipper && (activity.carrier.location.nil? ? '' : activity.carrier.location.state) %>
                <% end %>
                <% if show_shipper && activity.shipper && show_carrier && activity.carrier %>
                &nbsp;/&nbsp;
                <% end %>
                <% if show_shipper && activity.shipper %>
                  <%= activity.shipper && (activity.shipper.location.nil? ? '' : activity.shipper.location.state) %>
                <% end %>
              <% end %>
            </td>
            <td class="text-center"><%= activity.loads_per_week %></td>
            <td class="text-center link"><%= convert_date(activity.date_opened) %></td>
            <td class="text-center link"><%= convert_date(activity.date_closed) %></td>
            <td class="text-center link"><%= activity.outcome %></td>
            <td>
              <span
                class="learned"
                data-toggle="tooltip"
                data-placement="right"
                data-html="true"
                title="<%= activity.notes.nil? ? '' : activity.notes.html_safe %>">
                <%= activity.notes.nil? ? '' : truncate_html_to_sentence(activity.notes.html_safe) %>
              </span>
            </td>
            <td><%= activity.activity_type %></td>
            <td><%= activity.status ? 'Open' : 'Closed' %></td>
            <td><%= activity.reason %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<script language="javascript">
  $(document).ready(function() {
    filterTable("activities_table");
  });
</script>
