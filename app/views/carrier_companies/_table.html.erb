<table class="table table-striped table-bordered data-table-buttons display nowrap" data-order="[[0, &quot;desc&quot;]]" id="companies_table">
  <thead>
    <tr class="odd gradeX">
      <th data-orderable="false" width="5%">Actions</th>
      <th>Name</th>
      <th>Location</th>
      <th>Type</th>
      <th>Phone #</th>
      <th>Website</th>
    </tr>
  </thead>
  <tbody>
    <% if !carrier_companies.nil? %>
      <% carrier_companies.each do |carrier_company| %>
        <tr>
          <td>
            <%= link_to '<i class="far fa-eye"></i>'.html_safe, carrier_company, :class => 'btn btn-info btn-xs', target: :_blank %>
            <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_carrier_company_path(carrier_company), :class => 'btn btn-warning btn-xs', target: :_blank %>
            <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, carrier_company, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-xs'%>
          </td>
          <td><%= carrier_company.name %></td>
          <td><%= carrier_company.city %>, <%= generate_abv(carrier_company.state).upcase %></td>
          <td><%= carrier_company.company_type %></td>
          <td><%= carrier_company.phone_number %></td>
          <td><%= carrier_company.website.blank? ? '' : "<a href='#{carrier_company.website}'>#{carrier_company.website}</a>".html_safe %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
