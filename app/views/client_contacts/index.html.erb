<p id="notice"><%= notice %></p>

<h1>Client Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Email</th>
      <th>Work phone</th>
      <th>Home phone</th>
      <th>Address</th>
      <th>City/Town</th>
      <th>State</th>
      <th>Postal</th>
      <th>Country</th>
      <th>Client</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @client_contacts.each do |client_contact| %>
      <tr>
        <td><%= client_contact.last_name %></td>
        <td><%= client_contact.email %></td>
        <td><%= client_contact.work_phone %></td>
        <td><%= client_contact.home_phone %></td>
        <td><%= client_contact.address %></td>
        <td><%= client_contact.city %></td>
        <td><%= client_contact.state %></td>
        <td><%= client_contact.postal %></td>
        <td><%= client_contact.country %></td>
        <td><%= client_contact.client_id %></td>
        <td><%= link_to 'Show', client_contact %></td>
        <td><%= link_to 'Edit', edit_client_contact_path(client_contact) %></td>
        <td><%= link_to 'Delete', client_contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

