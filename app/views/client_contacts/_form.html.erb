<!-- begin page-header -->
<%= render 'layouts/static/header', header_title: 'Client Contact', sub_header_title: 'Create/Edit/View'%>
<!-- end page-header -->
<!-- begin panel -->
<div class="panel panel-inverse">
  <div class="panel-heading">
    <div class="panel-heading-btn">
    </div>
    <h4 class="panel-title"> <%= params[:action] == 'new' ? 'Create New Contact' : "Edit Contact ##{generate_alphanumeric_id('Contact', client_contact.id)}"%></h4>
  </div>
  <div class="panel-body">
  <%= form_with(model: client_contact, local: true, :html => {class: 'form-horizontal', 'data-parsley-validate' => true}) do |form| %>
  <%= form.hidden_field :client_id %>
  <% if client_contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(client_contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% client_contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
                <div class="form-group row m-b-15">
                  <%= form.label :title, 'Title:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-8 col-sm-8">
                  <%= form.text_field :title, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group row m-b-15">
                  <%= form.label :first_name, 'First Name:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-8 col-sm-8">
                  <%= form.text_field :first_name, class: 'form-control', 'data-parsley-required' => true %>
                  </div>
                </div>
                <div class="form-group row m-b-15">
                  <%= form.label :last_name, 'Last Name:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-8 col-sm-8">
                  <%= form.text_field :last_name, class: 'form-control', 'data-parsley-required' => true %>
                  </div>
                </div>
                <div class="form-group row m-b-15">
                  <%= form.label :email, 'Email Address:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-8 col-sm-8">
                  <%= form.email_field :email, class: 'form-control', 'data-parsley-required' => true %>
                  </div>
                </div>
                <div class="form-group row m-b-15">
                  <%= form.label :password, 'Password:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-8 col-sm-8">
                  <%= form.password_field :password, class: 'form-control', 'data-parsley-required' => true %>
                  </div>
                </div>
                <div class="form-group row m-b-15">
                  <%= form.label :confirm_password, 'Confirm Password:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-8 col-sm-8">
                  <%= form.password_field :confirm_password, class: 'form-control', 'data-parsley-required' => true %>
                  </div>
                </div>


                <div class="form-group row m-b-15">
                  <%= form.label :home_phone, 'Cell:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-8 col-sm-8">
                  <%= form.text_field :home_phone, class: 'form-control', 'data-inputmask' => "'mask': '(999) 999-9999'" %>
                  </div>
                </div>
                <div class="form-group row m-b-15">
                  <label class="col-md-4 col-sm-4 col-form-label">same as Head Office or Master Client Record? </label>
                  <div class="col-md-8 col-sm-8">
                    <input type="checkbox" name="same_ho" data-render="switchery" data-theme="default" data-secondary-color="rgb(255, 91, 87)" data-change="check-switchery-state-text"  <%= client_contact.same_ho ? 'checked' : '' %>/>
                  </div>
                </div>
                <div class="form-group row m-b-15 address-fields">
                  <%= form.label :work_phone, 'Work Phone:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-8 col-sm-8">
                  <%= form.text_field :work_phone, class: 'form-control', 'data-inputmask' => "'mask': '(999) 999-9999'" %>
                  </div>
                </div>
                <div class="form-group row m-b-15 address-fields">
                  <%= form.label :address, 'Address:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-8 col-sm-8">
                  <%= form.text_field :address, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group row m-b-15 address-fields">
                  <%= form.label :country, 'Country:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-8 col-sm-8">
                  <%= form.select :country, options_for_select([]),{:include_blank => true}, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group row m-b-15 address-fields">
                  <%= form.label :state, 'Province / State:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-8 col-sm-8">
                  <%= form.select :state, options_for_select([]),{:include_blank => true}, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group row m-b-15 address-fields">
                  <%= form.label :postal, 'Postal / Zip:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-8 col-sm-8">
                  <%= form.text_field :postal, class: 'form-control', 'data-inputmask' => "'mask': '******'" %>
                  </div>
                </div>
                <div class="form-group row m-b-15 address-fields">
                  <%= form.label :city, 'City/Town:', class: 'col-md-4 col-sm-4 col-form-label' %>
                  <div class="col-md-8 col-sm-8">
                    <%= form.select :city, Location.all.collect {|l| [l.name, l.name]},{:include_blank => true, :selected => client_contact.city}, class: 'form-control combo-dropdown'%>
                  </div>
                </div>

                <div class="form-group row m-b-15">
                  <label class="col-md-4 col-sm-4 col-form-label">is it Primary Ops Contact?</label>
                  <div class="col-md-8 col-sm-8">
                    <input type="checkbox" name="pdm"  data-render="switchery" data-theme="default" data-secondary-color="rgb(255, 91, 87)"  <%= is_pdm ? 'checked' : '' %> >
                  </div>
                </div>
                <div class="form-group row m-b-15">
                  <label class="col-md-4 col-sm-4 col-form-label">is it Primary Decision Maker? </label>
                  <div class="col-md-8 col-sm-8">
                    <input type="checkbox" name="poc"   data-render="switchery" data-theme="default" data-secondary-color="rgb(255, 91, 87)"  <%= is_poc ? 'checked' : '' %> >
                  </div>
                </div>
                <div class="form-group row m-b-0">
                  <label class="col-md-4 col-sm-4 col-form-label">&nbsp;</label>
                  <div class="col-md-8 col-sm-8">
                    <%= form.submit 'Submit', :class => 'btn btn-primary' %>
                    <% client = Client.find(client_contact.client_id)%>
                    <% if params[:action] == 'edit' %>
                      &nbsp;&nbsp;<%= link_to 'Show', client, :class => 'btn btn-info' %>
                    <% end %>
                    <% if params[:action] == 'new' %>
                      &nbsp;&nbsp;<%= link_to 'Back', clients_path, :class => 'btn btn-default' %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
</div>
<!-- end panel -->
<script language="javascript">
	populateCountries("client_contact_country", "client_contact_state");
  <% if client_contact.country.present? %>
    tiggerChangeOnSelectCountry('client_contact_country', '<%= client_contact.country %>')
  <% end %>
  <% if client_contact.state.present? %>
    tiggerChangeOnSelectCountry('client_contact_state', '<%= client_contact.state %>')
  <% end %>
</script>
