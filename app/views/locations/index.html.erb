<!-- begin page-header -->
<%= render 'layouts/static/header', header_title: 'Locations', sub_header_title: 'Create/Edit/View'%>
<!-- end page-header -->
<!-- begin panel -->
<div class="panel panel-inverse">
  <div class="panel-heading">
    <div class="panel-heading-btn">
    <%= link_to 'New Location', new_location_path, :class => 'btn btn-primary btn-xs' %>
    </div>
    <h4 class="panel-title">List of Locations</h4>
  </div>
  <div class="panel-body">
    <table id="data-table-buttons" class="table table-striped table-bordered data-table-buttons">
    								<thead>
    									<tr class="odd gradeX">
    										<th width="1%">#</th>
    										<th class="text-nowrap">Name</th>
    										<th class="text-nowrap">Address</th>
										    <th class="text-nowrap" data-orderable="false">Actions</th>
    									</tr>
    								</thead>
    								<tbody>
                      <% @locations.each do |location| %>
                        <tr>
                          <td><%= generate_alphanumeric_id(location.country, location.id) %></td>
                          <td><%= location.name %></td>
                          <td><%= location.address %> <%= location.city %> <%= location.state %>, <%= location.country %> <%= location.postal %></td>
                          <td>
                            <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_location_path(location), :class => 'btn btn-warning' %>
                            <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, location, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger'%>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>


  </div>
</div>
<!-- end panel -->
