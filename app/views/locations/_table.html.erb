<table id="data-table-buttons" class="table table-striped table-bordered data-table-buttons display nowrap" width="100%" data-order="[[0, &quot;desc&quot;]]">
  <thead>
    <tr class="odd gradeX">
      <th width="1%">Primary</th>
      <th>Name</th>
      <th>Type</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Phone</th>
      <th data-orderable="false">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if !locations.nil? %>
      <% locations.each do |location| %>
        <tr>
          <td style="text-align: center;"><%= location.is_origin ? '<span class="label label-warning">Origin</span><br/>'.html_safe : '' %>
            <%= location.is_destination ? '<span class="label label-danger">Destination</span><br/>'.html_safe : '' %>
          <%= (!client.nil? && client.head_office == location.id) ? '<span class="label label-primary">Head Office</span><br/>'.html_safe : '' %></td>
          <td><%= location.name %></td>
          <td><%= location.loc_type %></td>
          <td><%= location.address %></td>
          <td><%= location.city %></td>
          <td><%= location.state %></td>
          <td><%= location.country %></td>
          <td><%= location.phone %></td>

          <td>
            <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_location_path(location), :class => 'btn btn-warning btn-xs' %>
            <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, location, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-xs'%>
          </td>

        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
