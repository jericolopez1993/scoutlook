<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>Client type</th>
      <th>Relationship owner</th>
      <th>Company name</th>
      <th>Client</th>
      <th>Parent</th>
      <th>Sales priority</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Postal</th>
      <th>Country</th>
      <th>Phone</th>
      <th>Annual revenue</th>
      <th>Industry</th>
      <th>Primary industry</th>
      <th>Hazardous</th>
      <th>Food grade</th>
      <th>Freight revenue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.client_type %></td>
        <td><%= client.relationship_owner %></td>
        <td><%= client.company_name %></td>
        <td><%= client.client_id %></td>
        <td><%= client.parent_id %></td>
        <td><%= client.sales_priority %></td>
        <td><%= client.address %></td>
        <td><%= client.city %></td>
        <td><%= client.state %></td>
        <td><%= client.postal %></td>
        <td><%= client.country %></td>
        <td><%= client.phone %></td>
        <td><%= client.annual_revenue %></td>
        <td><%= client.industry %></td>
        <td><%= client.primary_industry %></td>
        <td><%= client.hazardous %></td>
        <td><%= client.food_grade %></td>
        <td><%= client.freight_revenue %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

