<style>
  @media (max-width: 767px) {
    .text-right {
      text-align: left!important;
    }
  }
</style>
<!-- begin page-header -->
<%= render 'layouts/static/header', header_title: params[:action] == 'new' ? 'Create New Client' : "Edit Client - #{client.company_name}", sub_header_title: ''%>
<!-- end page-header -->
<!-- begin panel -->

<%= form_with(model: client, local: true, :html => {class: 'form-horizontal', 'data-parsley-validate' => true}) do |form| %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-inverse">
      <div class="panel-heading">
        <div class="panel-heading-btn"></div>
        <h4 class="panel-title">
        Information</h4>
      </div>
      <div class="panel-body">
        <% if client.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(client.errors.count, "error") %>
              prohibited this client from being saved:</h2>

            <ul>
              <% client.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <h4 class="text-inverse">Details</h4>
        <div class="form-group row m-b-15">
          <%= form.label :company_name, 'Company Name:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
          <div class="col-md-9 col-sm-8">
            <%= form.text_field :company_name, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row m-b-15">
          <%= form.label :client_type, 'Type:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
          <div class="col-md-9 col-sm-8">
            <%= form.select :client_type, options_for_select(['Shipper', 'Carrier', 'Destination', 'Customs Broker', 'Supplier', 'Other'], client.client_type),{:include_blank => true}, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row m-b-15">
          <%= form.label :relationship_owner, 'Relationship Owner:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
          <div class="col-md-9 col-sm-8">
            <%= form.select :relationship_owner, Rep.all.collect {|r| [ "#{r.first_name} #{r.last_name}", r.id ] },{:include_blank => true, :selected => client.relationship_owner}, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row m-b-15">
          <%= form.label :sales_priority, 'Sales Priority:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
          <div class="col-md-9 col-sm-8">
            <%= form.select :sales_priority, options_for_select([1,2,3], client.sales_priority),{:include_blank => true}, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row m-b-15">
          <%= form.label :annual_revenue, 'Annual Revenue:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
          <div class="col-md-9 col-sm-8">
            <%= form.select :annual_revenue, options_for_select(['0-5M', '5-10M', '10-25M', '25-100M', '100M+'], client.annual_revenue),{:include_blank => true}, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row m-b-15">
          <%= form.label :industry, 'Industry:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
          <div class="col-md-9 col-sm-8">
            <%= form.text_field :industry, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row m-b-15">
          <%= form.label :primary_industry, 'Primary Industry:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
          <div class="col-md-9 col-sm-8">
            <%= form.text_field :primary_industry, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row m-b-15">
          <%= form.label :attachment_file, 'Attachements:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
          <div class="col-md-9 col-sm-8">
            <%= form.file_field :attachment_file, multiple: true %>
          </div>
        </div>
        <hr>
        <h4 class="text-inverse">Address</h4>
        <%= render 'locations/fields', location: (client.location.nil? ? Location.new : client.location), form: form %>

        <hr>
        <h4 class="text-inverse">Credit</h4>
        <div class="form-group row m-b-15">
          <%= form.label :credit_status, 'Credit Status:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
          <div class="col-md-9 col-sm-8">
            <%= form.select :credit_status, options_for_select(['Credit', 'Hold', 'Cash Only'], client.credit_status),{:include_blank => true}, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row m-b-15">
          <%= form.label :credit_approval, 'Credit Approval:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
          <div class="col-md-9 col-sm-8">
            <%= form.number_field :credit_approval, class: 'form-control', 'data-parsley-type' => 'number' %>
          </div>
        </div>

        <hr>
        <h4 class="text-inverse">Item Information</h4>
        <div class="form-group row m-b-15">
          <%= form.label :hazardous, 'Hazardous:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
          <div class="col-md-9 col-sm-8">
            <%= form.text_field :hazardous, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row m-b-15">
          <%= form.label :food_grade, 'Food Grade:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
          <div class="col-md-9 col-sm-8">
            <%= form.text_field :food_grade, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row m-b-15">
          <%= form.label :freight_revenue, 'Freight Revenue:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
          <div class="col-md-9 col-sm-8">
            <%= form.number_field :freight_revenue, class: 'form-control', 'data-parsley-type' => 'number' %>
          </div>
        </div>
        <div class="form-group row m-b-15">
          <%= form.label :volume_intra, 'Volume Intra:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
          <div class="col-md-9 col-sm-8">
            <%= form.text_field :volume_intra, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row m-b-15">
          <%= form.label :volume_inter, 'Volume Inter:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
          <div class="col-md-9 col-sm-8">
            <%= form.text_field :volume_inter, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row m-b-15">
          <%= form.label :volume_to_usa, 'Volume To USA:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
          <div class="col-md-9 col-sm-8">
            <%= form.text_field :volume_to_usa, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row m-b-15">
          <%= form.label :volume_from_usa, 'Volume From USA:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
          <div class="col-md-9 col-sm-8">
            <%= form.text_field :volume_from_usa, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row m-b-15">
          <%= form.label :notes, 'Notes:', class: 'text-right col-md-2 col-sm-4 col-form-label' %>
          <div class="col-md-9 col-sm-8">
            <%= form.text_area(:notes, cols: 20, rows: 15, class: 'tinymce') %>
          </div>
        </div>

        <div class="form-group row m-b-15">
          <div class="col-md-2"></div>
          <div class="col-md-9 col-sm-12 d-flex justify-content-end">
            <%= form.submit 'Submit', :class => 'btn btn-primary' %>
            <% if params[:action] == 'edit' %>
              &nbsp;&nbsp;<%= link_to 'Show', client, :class => 'btn btn-info' %>
            <% end %>
            <% if params[:action] == 'new' %>
              &nbsp;&nbsp;<%= link_to 'Back', clients_path, :class => 'btn btn-default' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %>
<%= tinymce %>
<!-- end panel -->
