<p id="notice"><%= notice %></p>

<h1>Activity Outcomes</h1>

<table>
  <thead>
    <tr>
      <th>Outcome</th>
      <th>Reason</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_outcomes.each do |activity_outcome| %>
      <tr>
        <td><%= activity_outcome.outcome %></td>
        <td><%= activity_outcome.reason %></td>
        <td><%= activity_outcome.notes %></td>
        <td><%= link_to 'Show', activity_outcome %></td>
        <td><%= link_to 'Edit', edit_activity_outcome_path(activity_outcome) %></td>
        <td><%= link_to 'Delete', activity_outcome, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

