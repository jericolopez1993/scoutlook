<div class="header-scout">
  <h1 class="pull-left">
    <%= render 'layouts/static/header', header_title: params[:action] == 'new' ? 'Create New Planning Sheet' : "Edit Planning Sheet" %>
  </h1>
</div>
<!-- end page-header -->
<!-- begin panel -->
<%= form_with(model: planning_sheet, local: true, :html => {class: 'form-horizontal', 'data-parsley-validate' => true}) do |form| %>
  <%= form.hidden_field :carrier_id %>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-inverse">
        <div class="panel-heading">
          <div class="panel-heading-btn"></div>
          <h4 class="panel-title">Information</h4>
        </div>
        <div class="panel-body">
          <% if planning_sheet.errors.any? %>
            <div class="form-group row m-b-15">
              <div class="col-md-12 col-sm-12">
                <div class="alert alert-danger" role="alert">
                  <h4 class="alert-heading"><%= pluralize(planning_sheet.errors.count, "error") %> prohibited this planning_sheet from being saved:</h4>
                  <ul>
                    <% planning_sheet.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>ss
                </div>
              </div>
            </div>
          <% end %>
            <%= form.hidden_field :created_by, value: current_user.id %>
          <div class="form-group row m-b-15">
            <%= form.label :sheet_name, 'Sheet Name:', class: 'text-right m-position-left col-md-2 col-sm-4 col-form-label' %>
            <div class="col-md-9 col-sm-8">
              <%= form.text_field :sheet_name, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group row m-b-15">
            <%= form.label :sheet_url, 'Sheet URL:', class: 'text-right m-position-left col-md-2 col-sm-4 col-form-label' %>
            <div class="col-md-9 col-sm-8">
              <%= form.text_field :sheet_url, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group row m-b-15">
            <div class="col-md-2"></div>
            <div class="col-md-9 col-sm-12 d-flex justify-content-end">
              <%= form.submit 'Submit', :class => 'btn btn-primary' %>
              <%= link_to 'Back', planning_sheets_path, :class => 'btn btn-default' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
