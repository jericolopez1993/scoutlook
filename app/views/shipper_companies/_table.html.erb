<table class="table table-striped table-bordered data-table-buttons display nowrap" data-order="[[0, &quot;desc&quot;]]" id="companies_table">
  <thead>
    <tr class="odd gradeX">
      <th data-orderable="false" width="5%">Actions</th>
      <th>Name</th>
      <th>Location</th>
      <th>Type</th>
      <th>Phone #</th>
      <th>Website</th>
    </tr>
  </thead>
  <tbody>
    <% if !shipper_companies.nil? %>
      <% shipper_companies.each do |shipper_company| %>
        <tr>
          <td>
            <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_shipper_company_path(shipper_company), :class => 'btn btn-warning btn-xs' %>
            <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, shipper_company, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-xs'%>
          </td>
          <td><%= shipper_company.name %></td>
          <td><%= shipper_company.city %>, <%= shipper_company.state.upcase %></td>
          <td><%= shipper_company.company_type %></td>
          <td><%= shipper_company.phone_number %></td>
          <td><%= shipper_company.website.blank? ? '' : "<a href='#{shipper_company.website}'>#{shipper_company.website}</a>".html_safe %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
