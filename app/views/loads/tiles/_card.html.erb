<div class="kanban-entry-inner">
    <div class="kanban-label"
        style="border: 2px solid #6f060b;">
        <div class="row">
          <div class="col-md-12" style="text-align: center;">
            <div class="row">
              <div class="col-md-5" style="padding: 0;">
                <div class="row">
                  <div class="col-md-12">
                    <%= generate_location(tile.os, nil).html_safe %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12" style="font-size: 9.5px; padding-top: 5px;">
                    <!-- ADD LEFT CONTENT HERE -->
                    <span><%= tile.origin %></span><br/>
                    <b><%= tile.load_num %></b><br/>
                    <% if tile.customer %>
                      <span><%= tile.customer && tile.customer.gsub(/[^0-9A-Za-z]/, '')[0, 5].upcase %></span>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="col-md-2" style="padding: 0;">
                <div><i class="fas fa-arrow-right" style="vertical-align: middle;"></i></div>
              </div>
              <div class="col-md-5" style="padding: 0;">
                <div class="row">
                  <div class="col-md-12">
                    <%= generate_location(tile.ds, nil).html_safe %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12" style="font-size: 9.5px; padding-top: 5px;">
                    <!-- ADD RIGHT CONTENT HERE -->
                    <span><%= tile.destination %></span><br/>
                    <b><%= tile.mc_num %></b><br/>
                    <% if tile.carrier %>
                      <span><%= tile.carrier && tile.carrier.gsub(/[^0-9A-Za-z]/, '')[0, 5].upcase %></span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
