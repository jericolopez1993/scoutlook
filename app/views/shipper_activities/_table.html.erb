<table class="table table-striped table-bordered data-table-buttons display nowrap">
                <thead>
                  <tr class="odd gradeX">
                    <th>Type</th>
                    <th>Steward</th>
                    <th>Annual Value</th>
                    <th>Status</th>
                    <th>Date Opened</th>
                    <th>Date Closed</th>
                    <th data-orderable="false">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% shipper_activities.each do |shipper_activity| %>
                    <tr>
                      <td><%= shipper_activity.activity_type %></td>
                      <td><%= shipper_activity.rep.nil? ? "" : (link_to "#{shipper_activity.rep.first_name} #{shipper_activity.rep.last_name}", shipper_activity.rep) %></td>
                      <td><%= shipper_activity.annual_value %></td>
                      <td><%= shipper_activity.status ? 'Open' : 'Closed' %></td>
                      <td><%= convert_date(shipper_activity.date_opened) %></td>
                      <td><%= convert_date(shipper_activity.date_closed) %></td>
                      <td>
                        <%= link_to '<i class="far fa-eye"></i>'.html_safe, shipper_activity_path(:id => shipper_activity.id, :previous_controller => params[:controller]), :class => 'btn btn-info btn-xs' %>
                        <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_shipper_activity_path(:id => shipper_activity.id, :previous_controller => params[:controller]), :class => 'btn btn-warning btn-xs' %>
                        <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, shipper_activity_path(:id => shipper_activity.id, :previous_controller => params[:controller]), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-xs'%>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
