<table class="table table-striped table-bordered display nowrap" id="shipper_activities_table">
  <thead>
    <tr class="odd gradeX">
      <th>Steward</th>
      <th>Status</th>
      <th>Type</th>
      <th>LPW</th>
      <th>Annual</th>
      <th>Open</th>
      <th>Close</th>
      <th>Outcome</th>
      <th>Reason</th>
      <th>Learned</th>
      <% if show_shipper %>
        <th>Shipper</th>
        <th>Contact</th>
        <th>Priority</th>
        <th>City</th>
        <th>State</th>
      <% end %>
      <th data-orderable="false">Actions</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th>Steward</th>
      <th>Status</th>
      <th>Type</th>
      <th>LPW</th>
      <th>Annual</th>
      <th>Open</th>
      <th>Close</th>
      <th>Outcome</th>
      <th>Reason</th>
      <th>Learned</th>
      <% if show_shipper %>
        <th>Shipper</th>
        <th>Contact</th>
        <th>Priority</th>
        <th>City</th>
        <th>State</th>
      <% end %>
      <th data-orderable="false">Actions</th>
    </tr>
  </tfoot>
  <tbody>
    <% shipper_activities.each do |shipper_activity| %>
      <tr>
        <td><%= shipper_activity.user.nil? ? "" : (link_to "#{shipper_activity.user.first_name} #{shipper_activity.user.last_name}", shipper_activity.user) %></td>
        <td><%= shipper_activity.status ? 'Open' : 'Closed' %></td>
        <td><%= shipper_activity.activity_type %></td>
        <td><%= shipper_activity.loads_per_week %></td>
        <td><%= shipper_activity.annual_value %></td>
        <td><%= convert_date(shipper_activity.date_opened) %></td>
        <td><%= convert_date(shipper_activity.date_closed) %></td>
        <td><%= shipper_activity.outcome.outcome %></td>
        <td><%= shipper_activity.outcome.reason %></td>
        <td><%= shipper_activity.outcome.notes.nil? ? "" : shipper_activity.outcome.notes.html_safe %></td>
        <% if show_shipper %>
          <td>
            <%= shipper_activity.shipper && link_to(shipper_activity.shipper.company_name.blank? ? "(no name)" : shipper_activity.shipper.company_name, shipper_activity.shipper) %>
          </td>
          <td><%= shipper_activity.shipper_contact.nil? ? "" : (link_to "#{shipper_activity.shipper_contact.full_name}", edit_shipper_contact_path(shipper_activity.shipper_contact)) %></td>
          <td><%= shipper_activity.shipper.nil? || shipper_activity.shipper.sales_priority.blank? ? "" : shipper_activity.shipper.sales_priority %></td>
          <td><%= shipper_activity.shipper.nil? || shipper_activity.shipper.head_office_location.nil? ? "" : shipper_activity.shipper.head_office_location.city %></td>
          <td><%= shipper_activity.shipper.nil? || shipper_activity.shipper.head_office_location.nil? ? "" : shipper_activity.shipper.head_office_location.state %></td>
        <% end %>
        <td>
          <%= link_to '<i class="far fa-eye"></i>'.html_safe, shipper_activity_path(:id => shipper_activity.id, :previous_controller => params[:controller]), :class => 'btn btn-info btn-xs' %>
          <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_shipper_activity_path(:id => shipper_activity.id, :previous_controller => params[:controller]), :class => 'btn btn-warning btn-xs' %>
          <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, shipper_activity_path(:id => shipper_activity.id, :previous_controller => params[:controller]), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-xs'%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
