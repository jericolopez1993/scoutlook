<% if shipper_lane.present? && !shipper_lane.nil? %>
<div class="row">
  <label class="col-md-3 col-form-label">Priority:</label>
  <div class="col-md-9 lbl-padding-t">
    <%= shipper_lane.lane_priority_display %>
  </div>
</div>
<div class="row">
  <label class="col-md-3 col-form-label">Prefer Teams?</label>
  <div class="col-md-9 lbl-padding-t">
    <%= shipper_lane.prefer_team ? "<b class='text-success'>Yes</b>".html_safe : "<i class='text-danger'>No</i>".html_safe %>
  </div>
</div>
<div class="row">
  <label class="col-md-3 col-form-label">Origin:</label>
  <div class="col-md-9 lbl-padding-t">
    <% shipper_lane.lane_origin_to_array.each do |cr| %>
      <span class="badge badge-success"><%= cr %></span>
    <% end %>
  </div>
</div>
<div class="row">
  <label class="col-md-3 col-form-label">Destination:</label>
  <div class="col-md-9 lbl-padding-t">
    <% shipper_lane.lane_destination_to_array.each do |cr| %>
      <span class="badge badge-primary"><%= cr %></span>
    <% end %>
  </div>
</div>
<div class="row">
  <label class="col-md-3 col-form-label">Trucks Per Week:</label>
  <div class="col-md-9 lbl-padding-t">
    <%= shipper_lane.truck_per_week %>
  </div>
</div>
<div class="row">
  <label class="col-md-3 col-form-label">Preferred Load Days:</label>
  <div class="col-md-9 lbl-padding-t">
    <% shipper_lane.preferred_load_day_to_array.each do |cr| %>
      <span class="badge badge-inverse"><%= cr %></span>
    <% end %>
  </div>
</div>
<div class="row">
  <label class="col-md-3 col-form-label">Notes:</label>
  <div class="col-md-9 lbl-padding-t">
    <%= shipper_lane.notes.nil? ? "" : shipper_lane.notes.html_safe %>
  </div>
</div>
<% else %>
<em>No Available</em>
<% end %>
