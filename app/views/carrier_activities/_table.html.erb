<table class="table table-striped table-bordered display nowrap"  id="carrier_activities_table">
  <thead>
    <tr class="odd gradeX">
      <th>Owner</th>
      <th>Status</th>
      <th>Type</th>
      <th>LPW</th>
      <th>Annual</th>
      <th>Open</th>
      <th>Close</th>
      <th>Outcome</th>
      <th>Reason</th>
      <th>Learned</th>
      <% if show_carrier %><th>Carrier</th><% end %>
      <th>Contact</th>
      <th>Priority</th>
      <th>City</th>
      <th>State</th>
      <th data-orderable="false">Actions</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th>Owner</th>
      <th>Status</th>
      <th>Type</th>
      <th>LPW</th>
      <th>Annual</th>
      <th>Open</th>
      <th>Close</th>
      <th>Outcome</th>
      <th>Reason</th>
      <th>Learned</th>
      <% if show_carrier %><th>Carrier</th><% end %>
      <th>Contact</th>
      <th>Priority</th>
      <th>City</th>
      <th>State</th>
      <th data-orderable="false">Actions</th>
    </tr>
  </tfoot>
  <tbody>
    <% carrier_activities.each do |carrier_activity| %>
      <tr>
        <td><%= carrier_activity.user.nil? ? "" : (link_to "#{carrier_activity.user.first_name} #{carrier_activity.user.last_name}", carrier_activity.user) %></td>
        <td><%= carrier_activity.status ? 'Open' : 'Closed' %></td>
        <td><%= carrier_activity.activity_type %></td>
        <td><%= carrier_activity.loads_per_week %></td>
        <td><%= carrier_activity.annual_value %></td>
        <td><%= convert_date(carrier_activity.date_opened) %></td>
        <td><%= convert_date(carrier_activity.date_closed) %></td>
        <td><%= carrier_activity.outcome.outcome %></td>
        <td><%= carrier_activity.outcome.reason %></td>
        <td><%= carrier_activity.outcome.notes.nil? ? "" : carrier_activity.outcome.notes.html_safe %></td>
        <% if show_carrier %>
          <td><%= carrier_activity.carrier.company_name.blank? ? "(no name)" : carrier_activity.carrier.company_name %></td>
        <% end %>
        <td><%= carrier_activity.carrier_contact.nil? ? "" : (link_to "#{carrier_activity.carrier_contact.full_name}", edit_carrier_contact_path(carrier_activity.carrier_contact)) %></td>
        <td><%= carrier_activity.carrier.sales_priority.blank? ? "" : carrier_activity.carrier.sales_priority %></td>
        <td><%= carrier_activity.carrier.head_office_location.nil? ? "" : carrier_activity.carrier.head_office_location.city %></td>
        <td><%= carrier_activity.carrier.head_office_location.nil? ? "" : carrier_activity.carrier.head_office_location.state %></td>
        <td>
          <%= link_to '<i class="far fa-eye"></i>'.html_safe, carrier_activity_path(:id => carrier_activity.id, :previous_controller => params[:controller]), :class => 'btn btn-info btn-xs' %>
          <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_carrier_activity_path(:id => carrier_activity.id, :previous_controller => params[:controller]), :class => 'btn btn-warning btn-xs' %>
          <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, carrier_activity_path(:id => carrier_activity.id, :previous_controller => params[:controller]), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-xs'%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
