<table class="table table-striped table-bordered data-table-buttons display nowrap"  id="engagement_table">
  <thead>
    <tr class="odd gradeX">
      <th>Date Stamp</th>
      <th>Type</th>
      <th>Steward</th>
      <th>Annual Value</th>
      <th>Status</th>
      <th>Date Opened</th>
      <th>Date Closed</th>
      <th data-orderable="false">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% carrier_activities.each do |carrier_activity| %>
      <tr>
        <td><%= carrier_activity.date_stamp %></td>
        <td><%= carrier_activity.activity_type %></td>
        <td><%= carrier_activity.user.nil? ? "" : (link_to "#{carrier_activity.user.first_name} #{carrier_activity.user.last_name}", carrier_activity.user) %></td>
        <td><%= carrier_activity.annual_value %></td>
        <td><%= carrier_activity.status ? 'Open' : 'Closed' %></td>
        <td><%= convert_date(carrier_activity.date_opened) %></td>
        <td><%= convert_date(carrier_activity.date_closed) %></td>
        <td>
          <%= link_to '<i class="far fa-eye"></i>'.html_safe, carrier_activity_path(:id => carrier_activity.id, :previous_controller => params[:controller]), :class => 'btn btn-info btn-xs' %>
          <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_carrier_activity_path(:id => carrier_activity.id, :previous_controller => params[:controller]), :class => 'btn btn-warning btn-xs' %>
          <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, carrier_activity_path(:id => carrier_activity.id, :previous_controller => params[:controller]), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-xs'%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
