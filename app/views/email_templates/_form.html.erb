<!-- begin page-header -->
<%#= render 'layouts/static/header', header_title: params[:action] == 'new' ? 'Create New Reminders' : "Edit Reminder - #{email_template.first_name} #{email_template.last_name}" %>
<!-- end page-header -->
<!-- begin panel -->
<div class="panel panel-inverse">
  <div class="panel panel-lightblue">
    <div class="panel-heading">
      <div class="panel-heading-btn">
      </div>
      <h4 class="panel-title lp-header"><%= params[:action] == 'new' ? 'Create New Email Template' : "Edit Email Template" %></h4>
    </div>
    <div class="panel-body">
      <%= form_with(model: email_template, local: true, :html => {class: 'form-horizontal', 'data-parsley-validate' => true}) do |form| %>
        <% if email_template.errors.any? %>
        <div class="note note-danger">
          <div class="note-icon"><i class="fas fa-times"></i></div>
          <div class="note-content">
            <h4><b><%= pluralize(email_template.errors.count, "error") %> prohibited this client from being saved:</b></h4>
            <p>
              <ul>
                <% email_template.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </p>
          </div>
        </div>
        <% end %>
        <div class="form-group row m-b-15">
          <%= form.label :name, 'Name:', class: 'text-right m-position-left col-md-2 col-sm-4 col-form-label' %>
          <div class="col-md-4 col-sm-8" style="position: relative">
            <%= form.text_field :name, class: 'form-control'%>
          </div>
        </div>

        <div class="form-group row m-b-15">
          <%= form.label :logo_image, 'Company Logo:', class: 'text-right m-position-left col-md-2 col-sm-4 col-form-label' %>
          <div class="col-md-4 col-sm-8" style="position: relative">
            <%= form.file_field :logo_image %>
          </div>
        </div>

        <div class="form-group row m-b-15">
          <%= form.label :footer_description, 'Footer:', class: 'text-right m-position-left col-md-2 col-sm-4 col-form-label' %>
          <div class="col-md-4 col-sm-8" style="position: relative">
            <%= form.text_area(:footer_description, cols: 20, rows: 5, class: 'tinymce') %>
          </div>
        </div>


        <div class="form-group row m-b-0">
          <label class="text-right m-position-left col-md-2 col-sm-4 col-form-label">&nbsp;</label>
          <div class="col-md-9 col-sm-8">
            <%= form.submit 'Submit', :class => 'btn btn-primary' %>
            &nbsp;&nbsp;<%= link_to 'Back', email_templates_path, :class => 'btn btn-default' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= tinymce %>
<!-- end panel -->
