<h4>Items</h4>
<div class="scroll-me">
  <table class="table table-striped table-bordered display nowrap">
    <thead>
    <tr>
      <th>#</th>
      <th>Item</th>
      <th>Category</th>
      <th>Available</th>
      <th>Sold</th>
      <th>Price</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @items.each do |item| %>
    <tr class="<%= item.stock_amount > 0 ? '' : 'danger' %>">
        <td><%= item.sku %></td>
        <td><%= item.name %></td>
        <td><%= item.item_category.blank? ? '-' : item.item_category.name %></td>
        <td><%= item.stock_amount %></td>
        <td><%= item.amount_sold %></td>
        <td><%= number_to_currency(item.price , unit: @configurations.currency)%></td>
        <td><%= link_to '<i class="fas fa-eye"></i>'.html_safe, item, :class => "btn btn-primary btn-xs" %></td>
        <td><%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_item_path(item), :class => "btn btn-warning btn-xs" %></td>
        <td><%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, item, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
